---
// Dashboard Preview Section - Pixel-Perfect Replica of Next.js Dashboard
---

<section class="dashboard-preview-section">
  <p class="section-eyebrow">Owner Dashboard</p>
  <h2>Your properties, reports & photos ‚Äî all in one place</h2>
  <p class="section-subtitle">
    Access your personalized dashboard 24/7 to view inspection reports, browse property photos, track maintenance schedules, and monitor HVAC service history
  </p>

  <!-- Dashboard Frame with Browser Chrome -->
  <div class="dashboard-frame">
    <div class="browser-chrome">
      <div class="browser-dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div class="browser-url">
        <span class="lock-icon">üîí</span>
        <span class="url-text">dashboard.checkmyrental.com</span>
        <span class="secure-badge">Secure</span>
      </div>
    </div>

    <!-- Dashboard Container -->
    <div class="dashboard-container">
      <!-- Corner Decorative Accents -->
      <div class="corner-accent corner-tl"></div>
      <div class="corner-accent corner-tr"></div>
      <div class="corner-accent corner-bl"></div>
      <div class="corner-accent corner-br"></div>

      <!-- Top Edge Glow -->
      <div class="top-edge-glow"></div>

      <!-- Ambient Corner Glows -->
      <div class="ambient-glow ambient-glow-tl"></div>
      <div class="ambient-glow ambient-glow-br"></div>

      <!-- Sidebar -->
      <aside class="dashboard-sidebar">
        <!-- Premium gradient overlay -->
        <div class="sidebar-overlay"></div>
        <div class="sidebar-orb"></div>

        <!-- Logo Section -->
        <div class="sidebar-logo-section">
          <!-- Custom Logo Icon - House with Checkmark -->
          <div class="logo-container">
            <!-- House (rotated square) -->
            <div class="logo-house">
              <!-- Window grid -->
              <div class="logo-windows">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
              </div>
            </div>

            <!-- Checkmark circle -->
            <div class="logo-checkmark">
              <!-- Checkmark -->
              <div class="checkmark-icon"></div>
            </div>
          </div>

          <!-- Beta Badge -->
          <div class="beta-badge">Beta</div>
        </div>

        <!-- Quick Stats Card -->
        <div class="quick-stats-card">
          <div class="quick-stats-title">Quick Stats</div>
          <div class="quick-stats-list">
            <div class="quick-stat-item">
              <span class="stat-label">Properties</span>
              <span class="stat-value">3</span>
            </div>
            <div class="quick-stat-item">
              <span class="stat-label">Critical Issues</span>
              <span class="stat-value stat-critical">2</span>
            </div>
            <div class="quick-stat-item">
              <span class="stat-label">Reports</span>
              <span class="stat-value stat-info">6</span>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="sidebar-nav">
          <button class="nav-btn nav-btn-active">
            <div class="nav-indicator"></div>
            <svg class="nav-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span class="nav-label">Dashboard</span>
            <span class="nav-badge">2</span>
          </button>

          <button class="nav-btn">
            <svg class="nav-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="nav-label">Properties</span>
            <span class="nav-count">3</span>
          </button>

          <button class="nav-btn">
            <svg class="nav-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <span class="nav-label">Analytics</span>
          </button>

          <button class="nav-btn">
            <svg class="nav-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="nav-label">Settings</span>
          </button>

          <!-- Sign Out Button -->
          <button class="nav-btn signout-nav-btn">
            <svg class="nav-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span class="nav-label">Sign out</span>
          </button>
        </nav>
      </aside>

      <!-- Main Content Area -->
      <div class="dashboard-main">
        <!-- Top Header Bar -->
        <header class="dashboard-topbar">
          <div class="topbar-content">
            <div class="topbar-actions">
              <!-- Theme Toggle -->
              <button class="topbar-btn theme-toggle-btn">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
              </button>

              <!-- Notifications -->
              <button class="topbar-btn notification-btn">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span class="notification-dot"></span>
              </button>

              <!-- Search -->
              <button class="topbar-btn search-btn">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <span class="search-label">Search</span>
                <kbd class="search-kbd">‚åòK</kbd>
              </button>
            </div>
          </div>
        </header>

        <!-- Dashboard Content -->
        <main class="dashboard-content">
          <!-- Dashboard Greeting -->
          <div class="dashboard-greeting">
            <div class="greeting-content">
              <div class="greeting-header">
                <div class="greeting-icon">
                  <svg fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="5" />
                    <line x1="12" y1="1" x2="12" y2="3" />
                    <line x1="12" y1="21" x2="12" y2="23" />
                    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64" />
                    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78" />
                    <line x1="1" y1="12" x2="3" y2="12" />
                    <line x1="21" y1="12" x2="23" y2="12" />
                    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36" />
                    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22" />
                  </svg>
                </div>
                <div>
                  <h1 class="greeting-title">Good Afternoon, John üëã</h1>
                  <p class="greeting-date">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Tuesday, October 27, 2025 ‚Ä¢ 2:15 PM
                  </p>
                </div>
              </div>
              <div class="daily-tip">
                <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                <span>Regular maintenance keeps your properties in top condition.</span>
              </div>
            </div>
          </div>

          <!-- Section Header -->
          <div class="section-header">
            <div class="section-icon">
              <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <h2 class="section-title">Dashboard Overview</h2>
          </div>

          <!-- Metrics Grid -->
          <div class="metrics-grid">
            <!-- Seasonal Alert Card (Florida Season) -->
            <div class="metric-card metric-card-seasonal">
              <div class="metric-card-content">
                <div class="metric-header">
                  <div class="flex-1">
                    <span class="metric-label">Florida Season</span>
                    <div class="season-name">
                      <span class="season-icon">üåÄ</span>
                      <div>
                        <div class="season-title">Peak Hurricane Season</div>
                        <span class="season-badge season-badge-critical">CRITICAL RISK</span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Risk Meter -->
                <div class="risk-meter-container">
                  <div class="risk-meter-label">
                    <span>Risk Level</span>
                    <span class="risk-percentage">95%</span>
                  </div>
                  <div class="risk-meter-bar">
                    <div class="risk-meter-fill risk-meter-critical" style="width: 95%"></div>
                  </div>
                </div>
                <div class="metric-subtitle metric-warning">‚ö†Ô∏è Verify storm shutters and drainage</div>
              </div>
            </div>

            <!-- Portfolio Health - Spans 3 columns -->
            <div class="metric-card portfolio-health-card">
              <div class="metric-card-content">
                <div class="portfolio-health-header">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <span class="metric-label">Portfolio Health Score</span>
                  </div>
                  <div class="portfolio-trend">
                    <svg class="w-4 h-4 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                    <span class="text-emerald-400 text-sm font-semibold">+5% this month</span>
                  </div>
                </div>

                <div class="portfolio-score-section">
                  <!-- Score Circle -->
                  <div class="score-circle">
                    <svg width="140" height="140" class="score-circle-svg">
                      <circle cx="70" cy="70" r="60" fill="none" stroke="rgba(100,120,150,0.15)" stroke-width="8" />
                      <circle cx="70" cy="70" r="60" fill="none" stroke="url(#healthGradient)" stroke-width="8" stroke-dasharray="310 377" stroke-dashoffset="0" stroke-linecap="round" class="score-circle-progress" />
                      <defs>
                        <linearGradient id="healthGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                          <stop offset="0%" stop-color="rgb(52, 211, 153)" />
                          <stop offset="100%" stop-color="rgb(16, 185, 129)" />
                        </linearGradient>
                      </defs>
                    </svg>
                    <div class="score-circle-content">
                      <div class="score-value">82</div>
                      <div class="score-label">Excellent</div>
                    </div>
                  </div>

                  <!-- Stats Grid -->
                  <div class="portfolio-stats">
                    <div class="stat-item stat-success">
                      <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <div class="stat-content">
                        <div class="stat-value">10</div>
                        <div class="stat-label">Properties OK</div>
                      </div>
                    </div>
                    <div class="stat-item stat-warning">
                      <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                      </div>
                      <div class="stat-content">
                        <div class="stat-value">2</div>
                        <div class="stat-label">Need Attention</div>
                      </div>
                    </div>
                    <div class="stat-item stat-critical">
                      <div class="stat-icon">
                        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                      <div class="stat-content">
                        <div class="stat-value">0</div>
                        <div class="stat-label">Critical Issues</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Two Column Layout: Executive Summary + Quick Actions -->
          <div class="two-column-grid">
            <!-- Executive Summary -->
            <div class="executive-summary-card">
              <div class="exec-summary-header">
                <div class="exec-summary-icon">
                  <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                </div>
                <div class="exec-summary-title-area">
                  <h2 class="exec-summary-title">Portfolio Summary</h2>
                  <div class="exec-summary-badges">
                    <span class="status-badge status-critical">Critical</span>
                    <span class="ai-badge">
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                      </svg>
                      AI
                    </span>
                  </div>
                  <div class="exec-summary-metrics">
                    <span class="metric-badge">3 Properties</span>
                    <span class="metric-badge metric-badge-critical">2 Critical</span>
                    <span class="metric-badge metric-badge-warning">5 Important</span>
                  </div>
                </div>
              </div>

              <div class="exec-summary-content">
                <p class="exec-summary-text">
                  John, 2 properties need immediate attention with 2 critical issues detected. These require professional review to prevent potential damage or safety concerns.
                </p>

                <!-- Critical Properties Accordion -->
                <div class="critical-properties-accordion">
                  <div class="accordion-header">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <h3>Critical Properties (2)</h3>
                  </div>

                  <div class="accordion-item">
                    <svg class="property-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="property-address">1234 Maple Street, Tampa</span>
                    <span class="property-issues">1 critical, 2 important</span>
                    <svg class="chevron-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>

                  <div class="accordion-item">
                    <svg class="property-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="property-address">5678 Oak Avenue, Clearwater</span>
                    <span class="property-issues">1 critical, 3 important</span>
                    <svg class="chevron-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </div>
              </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions-card">
              <!-- Animated Background -->
              <div class="quick-actions-bg"></div>

              <!-- Floating Orbs -->
              <div class="quick-actions-orb orb-1"></div>
              <div class="quick-actions-orb orb-2"></div>

              <!-- Content -->
              <div class="quick-actions-content">
                <div class="quick-actions-header">
                  <div class="quick-actions-icon">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                    <div class="icon-ping"></div>
                    <div class="icon-ping-static"></div>
                  </div>
                  <div>
                    <h3 class="quick-actions-title">Action Center</h3>
                    <span class="live-badge">
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                      </svg>
                      Live Updates
                    </span>
                  </div>
                </div>

                <!-- Critical Action Card -->
                <div class="action-card action-card-critical">
                  <div class="action-card-bg"></div>
                  <div class="action-card-icon">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div class="icon-pulse"></div>
                    <div class="icon-pulse-static"></div>
                  </div>
                  <div class="action-card-content">
                    <div class="action-card-title">
                      Critical Issues Pending
                      <span class="action-badge">2</span>
                    </div>
                    <p class="action-card-text">2 issues require immediate attention</p>
                    <button class="action-btn action-btn-critical">
                      View all
                      <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
                    </button>
                  </div>
                </div>

                <!-- Important Action Card -->
                <div class="action-card action-card-warning">
                  <div class="action-card-bg"></div>
                  <div class="action-card-icon">
                    <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="icon-pulse-warning"></div>
                  </div>
                  <div class="action-card-content">
                    <div class="action-card-title">
                      Important Items
                      <span class="action-badge action-badge-warning">5</span>
                    </div>
                    <p class="action-card-text">5 items need review</p>
                    <button class="action-btn action-btn-warning">
                      View all
                      <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
