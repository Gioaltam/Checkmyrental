---
import Logo from "./Logo.astro";
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-grid">
      <div class="brand-col">
        <Logo size="medium" />
        <p class="tagline">Professional rental property inspections with photo-rich 24-hour reports. Quarterly Maintenance Inspections to protect your investment.</p>
      </div>

      <div class="link-col">
        <h4>Services</h4>
        <ul>
          <li><a href="/#services">Move-In Inspections</a></li>
          <li><a href="/#services">Move-Out Inspections</a></li>
          <li><a href="/#services">Quarterly Maintenance</a></li>
          <li><a href="/#services">HVAC Inspections</a></li>
        </ul>
      </div>

      <div class="link-col">
        <h4>For Owners</h4>
        <ul>
          <li><a href="/#contact">Book Documentation</a></li>
          <li><a href="/#process">How It Works</a></li>
          <li><a href="/#faq">FAQ</a></li>
        </ul>
      </div>

      <div class="link-col">
        <h4>Support</h4>
        <ul>
          <li><a href="#">Privacy Policy</a></li>
          <li><a href="#">Terms of Service</a></li>
          <li><a href="#">Support</a></li>
          <li><a href="#">API Documentation</a></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} CheckMyRental by Altam CO LLC. All rights reserved.</p>
      <div class="legal-links">
        <a href="#">Privacy</a>
        <a href="#">Terms</a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    background: var(--bg-elev);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    padding: 64px 0 32px;
    margin-top: 96px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 48px;
    margin-bottom: 48px;
  }

  .brand-col {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .tagline {
    color: var(--muted);
    line-height: 1.6;
    max-width: 320px;
  }

  .link-col h4 {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
    color: var(--white);
  }

  .link-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-col li {
    margin-bottom: 12px;
  }

  .link-col a {
    color: var(--muted);
    transition: color 0.2s;
  }

  .link-col a:hover {
    color: var(--brand-red);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    color: var(--muted);
    font-size: 0.875rem;
  }

  .footer-bottom p {
    margin: 0;
  }

  .legal-links {
    display: flex;
    gap: 24px;
  }

  .legal-links a {
    color: var(--muted);
    transition: color 0.2s;
  }

  .legal-links a:hover {
    color: var(--brand-red);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
  }
</style>
