<style>
  footer {
    background: #1a1a1a;
    color: white;
    padding: 4rem 3rem 2rem;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  body.light-mode footer {
    background: #f0f0f0;
    color: #1a1a1a;
    border-top-color: rgba(0, 0, 0, 0.1);
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .logo-icon {
    position: relative;
    width: 55px;
    height: 55px;
    flex-shrink: 0;
  }

  .logo-house {
    width: 42px;
    height: 42px;
    background: #2c3e50;
    transform: rotate(45deg);
    position: absolute;
    top: 6px;
    left: 6px;
  }

  .logo-window {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 16px;
    height: 16px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 2.5px;
  }

  .logo-window span {
    background: white;
    display: block;
  }

  .logo-check {
    position: absolute;
    bottom: -2px;
    right: -2px;
    width: 24px;
    height: 24px;
    background: #e74c3c;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 3px 10px rgba(231, 76, 60, 0.25);
  }

  .logo-check::after {
    content: '';
    width: 10px;
    height: 5px;
    border: 2.5px solid white;
    border-top: none;
    border-right: none;
    transform: rotate(-45deg) translateY(-1px);
  }

  .logo-text {
    font-size: 1.85rem;
    font-weight: 600;
    letter-spacing: -1px;
    white-space: nowrap;
    background: linear-gradient(135deg, #ffffff 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  body.light-mode .logo-text {
    background: linear-gradient(135deg, #1a1a1a 0%, #666666 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .logo-text .rental {
    background: linear-gradient(135deg, #ff6b6b 0%, #e74c3c 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 800;
  }

  .footer-contact {
    margin: 2rem 0;
  }

  .footer-contact h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  body.light-mode .footer-contact h3 {
    color: #1a1a1a;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0.5rem 1rem;
    border-radius: 8px;
  }

  .contact-link:hover {
    color: #e74c3c;
    background: rgba(231, 76, 60, 0.1);
    transform: translateX(4px);
  }

  .whatsapp-link:hover {
    color: #25D366;
    background: rgba(37, 211, 102, 0.1);
  }

  body.light-mode .contact-link {
    color: rgba(0, 0, 0, 0.7);
  }

  body.light-mode .contact-link:hover {
    color: #e74c3c;
    background: rgba(231, 76, 60, 0.08);
  }

  body.light-mode .whatsapp-link:hover {
    color: #25D366;
    background: rgba(37, 211, 102, 0.08);
  }

  .contact-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    list-style: none;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-links a:hover {
    color: #e74c3c;
  }

  body.light-mode .footer-links a {
    color: rgba(0, 0, 0, 0.6);
  }

  body.light-mode .footer-links a:hover {
    color: #e74c3c;
  }

  .footer-copyright {
    margin-top: 2rem;
    opacity: 0.6;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    footer {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-links {
      flex-direction: column;
      gap: 1rem;
    }

    .logo-text {
      font-size: 1.2rem;
    }

    .logo-icon {
      width: 45px;
      height: 45px;
    }

    .logo-house {
      width: 34px;
      height: 34px;
      top: 5px;
      left: 5px;
    }

    .logo-check {
      width: 20px;
      height: 20px;
    }

    .logo-check::after {
      width: 8px;
      height: 4px;
      border-width: 2px;
    }
  }

  @media (max-width: 360px) {
    footer {
      padding: 2.5rem 1rem 1.5rem;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
    }

    .logo-house {
      width: 30px;
      height: 30px;
      top: 4px;
      left: 4px;
    }

    .logo-check {
      width: 18px;
      height: 18px;
    }

    .logo-check::after {
      width: 7px;
      height: 3.5px;
      border-width: 2px;
    }
  }
</style>
