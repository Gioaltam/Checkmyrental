---
import Logo from "./Logo.astro";
const currentPath = Astro.url.pathname;
---

<nav transition:name="site-nav">
  <div class="nav-container container">
    <a href="/" class="logo-link" transition:name="logo">
      <Logo size="medium" />
    </a>
    <div class="links">
      <a href="/#services" class:list={[{ active: currentPath === '/' }]}>Services</a>
      <a href="/#process" class:list={[{ active: currentPath.startsWith('/process') }]}>How It Works</a>
      <a href="/#contact" class="button">Book Inspection</a>
    </div>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    -webkit-backdrop-filter: saturate(140%) blur(8px);
    backdrop-filter: saturate(140%) blur(8px);
    background: rgba(10, 10, 10, 0.7);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 50;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    transition: opacity 0.2s;
  }

  .logo-link:hover {
    opacity: 0.9;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .links a {
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 500;
    transition: background 0.2s, color 0.2s;
  }

  .links a:not(.button):hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .links a.active {
    color: var(--brand-red);
  }

  .links .button {
    margin-left: 8px;
  }

  @media (max-width: 640px) {
    .links a:not(.button) {
      display: none;
    }
  }
</style>
