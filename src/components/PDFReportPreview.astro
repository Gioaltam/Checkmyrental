    text-align: center;
    margin-bottom: 10px;
    overflow: visible;
    padding: 2px 0;
    position: relative;
    z-index: 3;
  }

  .cover-subtitle {
    font-size: 6px;
    color: #7f8c8d;
    letter-spacing: 0.15em;
    margin: 0 0 4px 0;
  }

  .cover-title {
    font-size: 18px;
    font-weight: 800;
    color: #2c3e50;
    margin: 0;
    letter-spacing: 0.15em;
    text-shadow: 1px 1px 0 #e0e0e0;
    line-height: 1.2;
  }

