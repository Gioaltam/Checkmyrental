<script>
  document.addEventListener('astro:page-load', () => {
    const cards = document.querySelectorAll('.pdf-preview-card');
    let activeCard: HTMLElement | null = null;
    let placeholder: Comment | null = null;
    let overlay: HTMLElement | null = null;

    function preventTouch(e: TouchEvent) { e.preventDefault(); }

    function createOverlay() {
      const el = document.createElement('div');
      el.style.cssText = 'position:fixed;inset:0;background:rgba(0,0,0,0.88);z-index:999;opacity:0;transition:opacity 0.25s ease;touch-action:none;';
      document.body.appendChild(el);
      // Prevent iOS rubber-band scrolling while overlay is open
      el.addEventListener('touchmove', (e) => e.preventDefault(), { passive: false });
      // Force reflow then fade in
      el.offsetHeight;
      el.style.opacity = '1';
      el.addEventListener('click', closeModal);
      return el;
    }

    function closeModal() {
      if (!activeCard || !placeholder) return;

      // Restore label and caption
      const label = activeCard.querySelector('.card-label') as HTMLElement;
      const caption = activeCard.querySelector('.card-caption') as HTMLElement;
      if (label) label.style.display = '';
      if (caption) caption.style.display = '';

      // Remove glow and restore hover/transition from pdf-page
      const page = activeCard.querySelector('.pdf-page') as HTMLElement;
      if (page) {
        page.style.boxShadow = '';
        page.style.transform = '';
        page.style.transformOrigin = '';
        page.style.transition = '';
      }

      // Remove touch lock and inline positioning styles
      activeCard.removeEventListener('touchmove', preventTouch);
      activeCard.style.cssText = 'cursor: pointer;';

      // Move card back to its original spot
      placeholder.parentNode?.insertBefore(activeCard, placeholder);
      placeholder.parentNode?.removeChild(placeholder);
      placeholder = null;
      activeCard = null;

      // Fade out and remove overlay
      if (overlay) {
        overlay.style.opacity = '0';
        const ov = overlay;
        setTimeout(() => ov.remove(), 250);
        overlay = null;
      }

      document.body.style.overflow = '';
      document.body.style.overscrollBehavior = '';
      document.documentElement.style.overscrollBehavior = '';
    }

    cards.forEach((card) => {
      (card as HTMLElement).style.cursor = 'pointer';
      card.addEventListener('click', () => {
        if (activeCard) {
          closeModal();
          return;
        }

        activeCard = card as HTMLElement;

        // Leave a placeholder comment so we can put it back
        placeholder = document.createComment('card-placeholder');
        activeCard.parentNode?.insertBefore(placeholder, activeCard);

        // Hide label and caption
        const label = activeCard.querySelector('.card-label') as HTMLElement;
        const caption = activeCard.querySelector('.card-caption') as HTMLElement;
        if (label) label.style.display = 'none';
        if (caption) caption.style.display = 'none';

        // Move card to body
        document.body.appendChild(activeCard);

        const isMobile = window.innerWidth <= 768;

        // Add glow shadow, scale up content, and disable hover float/transition on the pdf-page
        const page = activeCard.querySelector('.pdf-page') as HTMLElement;
        if (page) {
          page.style.boxShadow = '0 0 60px rgba(231, 76, 60, 0.15), 0 30px 100px rgba(0, 0, 0, 0.6)';
          page.style.transform = 'scale(2)';
          page.style.transformOrigin = 'center center';
          page.style.transition = 'none';
        }

        if (isMobile) {
          // No animation on mobile — just snap into place, always centered
          activeCard.style.cssText = `
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            width: 48vw;
            cursor: pointer;
            touch-action: none;
            margin: 0;
          `;
          // Ensure scroll position doesn't affect centering
          window.scrollTo(0, window.scrollY);
          activeCard.addEventListener('touchmove', preventTouch, { passive: false } as any);
        } else {
          // Desktop: spring scale-up animation
          activeCard.style.cssText = `
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.85);
            z-index: 1000;
            width: min(260px, 45vw);
            cursor: pointer;
            transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
          `;

          // Force reflow then scale up
          activeCard.offsetHeight;
          activeCard.style.transform = 'translate(-50%, -50%) scale(1)';
        }

        // Show overlay and lock scroll
        overlay = createOverlay();
        document.body.style.overflow = 'hidden';
        document.body.style.overscrollBehavior = 'none';
        document.documentElement.style.overscrollBehavior = 'none';
      });
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && activeCard) {
        closeModal();
      }
    });
  });
</script>

<style>
  .pdf-showcase-section {
    padding: 100px 20px;
    background: linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 50%, #0a0a0a 100%);
    position: relative;
  }

  .showcase-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Wrapper for fade effect - only on cards area */
  .pdf-grid-wrapper {
    position: relative;
  }

  .pdf-grid-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 80px;
    background: linear-gradient(to left, #0a0a0a 0%, rgba(10, 10, 10, 0.8) 40%, transparent 100%);
    pointer-events: none;
    z-index: 10;
    opacity: 0;
    transition: opacity 0.3s;
  }

  @media (max-width: 1400px) {
    .pdf-grid-wrapper::after {
      opacity: 1;
    }
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-eyebrow {
    color: #e74c3c;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
  }

  .section-header h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    color: #fafafa;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #a0a0a0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Preview Grid - Horizontal Scroll Carousel */
  .pdf-preview-grid {
    display: flex;
    gap: 24px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: 10px 20px 30px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    justify-content: center;
  }

  .pdf-preview-grid::-webkit-scrollbar {
    display: none;
  }

  .pdf-preview-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 0 0 clamp(180px, 14vw, 260px);
    scroll-snap-align: center;
  }

  .card-label {
    background: #e74c3c;
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
  }

  .card-caption {
    margin-top: 16px;
    color: #808080;
    font-size: 0.9rem;
    text-align: center;
  }

  /* PDF Page Base Styling */
  .pdf-page {
    background: #ffffff;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4), 0 0 0 1px rgba(255, 255, 255, 0.1);
    width: 100%;
    aspect-ratio: 8.5 / 11;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media (hover: hover) {
    .pdf-preview-card:hover .pdf-page {
      transform: translateY(-8px);
      box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5), 0 0 0 1px rgba(255, 255, 255, 0.15);
    }
  }

  /* ============================================
     COVER PAGE STYLES
     ============================================ */
  .cover-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    background: #ffffff;
  }

  .cover-accent-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #e74c3c;
    z-index: 10;
  }

  .cover-header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 22%;
    background: #ecf0f1;
    overflow: hidden;
  }

  .diagonal-lines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 8px,
      rgba(220, 220, 220, 0.3) 8px,
      rgba(220, 220, 220, 0.3) 9px
    );
  }

  /* Gold corner accents - L shapes */
