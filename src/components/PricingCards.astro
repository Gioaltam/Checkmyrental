---
// Pricing Cards Section with Quarterly Plan and Add-Ons

// Main quarterly service
const quarterlyPlan = {
  id: "quarterly",
  title: "Quarterly Property Documentation",
  priceHouse: 100,
  priceApartment: 70,
  priceFormatted: "$100 / $70",
  priceNote: "house / apartment per visit",
  description: "Complete property documentation when you need it with detailed photo reports delivered same day",
  features: [
    {
      name: "Interior Condition Documentation",
      valueProposition: "Capture wall conditions, flooring wear, and fixture status to establish baseline documentation that protects against unfair damage claims."
    },
    {
      name: "Exterior Condition Documentation",
      valueProposition: "Document siding, roof visible areas, landscaping, and structural elements to track weather damage and tenant maintenance compliance."
    },
    {
      name: "HVAC System Photography",
      valueProposition: "Visual records of filters, vents, and unit condition help identify maintenance neglect early and prove system state at move-in."
    },
    {
      name: "Plumbing System Documentation",
      valueProposition: "Document visible pipes, water heater, and fixtures to catch leaks early and establish pre-existing conditions."
    },
    {
      name: "Appliance Condition Photos",
      valueProposition: "Detailed appliance documentation prevents disputes over normal wear vs. tenant damage when it's time to assess the security deposit."
    },
    {
      name: "Kitchen Equipment Documentation",
      valueProposition: "Capture cabinet interiors, countertops, and fixtures—high-traffic areas where damage disputes are most common."
    },
    {
      name: "Same-Day Reports",
      valueProposition: "Get your documentation within hours, not days. Fast turnaround means you can address issues before they escalate."
    },
    {
      name: "Photo Documentation",
      valueProposition: "High-resolution, timestamped photos provide legally defensible evidence for any property condition disputes."
    },
    {
      name: "PDF Report Download",
      valueProposition: "Professional, organized reports ready to share with tenants, property managers, or use in legal proceedings."
    },
    {
      name: "Quarterly Scheduling",
      valueProposition: "Consistent 3-month intervals catch problems early—before a small leak becomes water damage or minor wear becomes major repairs."
    }
  ],
  type: "subscription",
  featured: true
};

// Payment link placeholders - replace with actual Square Payment Links
const SQUARE_LINKS = {
  house100: "SQUARE_PAYMENT_LINK_HOUSE_100",
  apt70: "SQUARE_PAYMENT_LINK_APT_70",
  moveInOut200: "SQUARE_PAYMENT_LINK_MOVEINOUT_200",
  annual200: "SQUARE_PAYMENT_LINK_ANNUAL_200"
};

const ZELLE_EMAIL = "giovannigomes11@gmail.com";

---

<section class="pricing-cards-section">
  <!-- Featured Quarterly Plan -->
  <div class="featured-plan-wrapper">
    <div class="featured-badge">Most Popular</div>
    <div class="pricing-card featured">
      <div class="card-header">
        <h2>{quarterlyPlan.title}</h2>
        <p class="card-description">{quarterlyPlan.description}</p>
      </div>

      <div class="price-display-tiered">
        <div class="price-tier">
          <span class="price-amount">$100</span>
          <span class="price-label">per house</span>
          <span class="price-condition">under 1,400 sq ft</span>
        </div>
        <span class="price-divider">/</span>
        <div class="price-tier">
          <span class="price-amount secondary">$70</span>
          <span class="price-label">per apartment</span>
        </div>
      </div>
      <p class="sqft-note">Larger homes? <a href="/#contact">Contact us</a> for a custom quote.</p>

      <ul class="features-list">
        {quarterlyPlan.features.map((feature, index) => (
          <li class="feature-accordion">
            <button
              class="feature-header"
              aria-expanded="false"
              data-index={index}
              onclick={`
                const btn = this;
                const isExpanded = btn.getAttribute('aria-expanded') === 'true';
                const content = btn.nextElementSibling;
                document.querySelectorAll('.feature-header').forEach(h => {
                  if (h !== btn) {
                    h.setAttribute('aria-expanded', 'false');
                    h.nextElementSibling.hidden = true;
                  }
                });
                btn.setAttribute('aria-expanded', !isExpanded);
                content.hidden = isExpanded;
              `}
            >
              <svg class="check-icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span class="feature-name">{feature.name}</span>
              <svg class="chevron-icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="feature-content" hidden>
              <p class="value-proposition">{feature.valueProposition}</p>
            </div>
          </li>
        ))}
      </ul>

      <div class="payment-options">
        <a
          href={SQUARE_LINKS.house100}
          class="add-to-cart-btn featured-btn"
          target="_blank"
          rel="noopener"
        >
          Pay with Card - $100 (House)
        </a>
        <a
          href={SQUARE_LINKS.apt70}
          class="add-to-cart-btn featured-btn secondary-btn"
          target="_blank"
          rel="noopener"
        >
          Pay with Card - $70 (Apartment)
        </a>
        <div class="zelle-option">
          <span class="zelle-label">Or pay with Zelle (no fees):</span>
          <span class="zelle-email">{ZELLE_EMAIL}</span>
        </div>
      </div>

      <p class="volume-discount-note">Managing 6+ properties? Contact us for custom pricing.</p>
    </div>
  </div>

  <!-- Add-On Services -->
  <div class="addon-section">
    <h3 class="addon-header">Additional Services</h3>
    <p class="addon-subheader">One-time inspections available when you need them</p>
    <div class="addon-grid">
      <div class="pricing-card addon">
        <span class="addon-badge">One-Time</span>
        <h4>Move-In / Move-Out</h4>
        <div class="addon-price">$200</div>
        <p class="addon-description">Comprehensive documentation at tenant transitions to protect your security deposit decisions</p>
        <a href={SQUARE_LINKS.moveInOut200} class="add-to-cart-btn" target="_blank" rel="noopener">Pay with Card - $200</a>
        <div class="zelle-option addon-zelle">
          <span class="zelle-label">Or Zelle:</span>
          <span class="zelle-email">{ZELLE_EMAIL}</span>
        </div>
      </div>
      <div class="pricing-card addon">
        <span class="addon-badge">One-Time</span>
        <h4>Annual Inspection</h4>
        <div class="addon-price">$200</div>
        <p class="addon-description">Thorough yearly property assessment for long-term maintenance planning</p>
        <a href={SQUARE_LINKS.annual200} class="add-to-cart-btn" target="_blank" rel="noopener">Pay with Card - $200</a>
        <div class="zelle-option addon-zelle">
          <span class="zelle-label">Or Zelle:</span>
          <span class="zelle-email">{ZELLE_EMAIL}</span>
        </div>
      </div>
    </div>
  </div>

</section>

<style>
  .pricing-cards-section {
    padding: 4rem 3rem 8rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Featured Plan Styles */
  .featured-plan-wrapper {
    position: relative;
    max-width: 800px;
    margin: 0 auto 6rem;
  }

  .featured-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 15px rgba(231, 76, 60, 0.4);
    z-index: 10;
  }

  .pricing-card {
    background: linear-gradient(135deg,
      rgba(255, 255, 255, 0.08) 0%,
      rgba(255, 255, 255, 0.04) 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 3rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .pricing-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(231, 76, 60, 0.03) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .pricing-card:hover::before {
    opacity: 1;
  }

  .pricing-card.featured {
    border-color: rgba(231, 76, 60, 0.3);
    box-shadow: 0 12px 48px rgba(231, 76, 60, 0.15);
    animation: featuredGlow 3s ease-in-out infinite;
  }

  @keyframes featuredGlow {
    0%, 100% {
      box-shadow: 0 12px 48px rgba(231, 76, 60, 0.15);
    }
    50% {
      box-shadow: 0 16px 56px rgba(231, 76, 60, 0.25);
    }
  }

  .pricing-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
  }

  .pricing-card.featured:hover {
    box-shadow: 0 24px 72px rgba(231, 76, 60, 0.3);
  }

  body.light-mode .pricing-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fc 100%);
    border-color: rgba(0, 0, 0, 0.1);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
  }

  body.light-mode .pricing-card.featured {
    border-color: rgba(231, 76, 60, 0.2);
    box-shadow: 0 12px 48px rgba(231, 76, 60, 0.1);
  }

  .card-header h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.95);
  }

  body.light-mode .card-header h2 {
    color: #1a1a1a;
  }

  .card-description {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  body.light-mode .card-description {
    color: #4a4a4a;
  }

  .price-display {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  body.light-mode .price-display {
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .price-display-tiered {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }

  .price-tier {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .price-divider {
    font-size: 2rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.3);
  }

  body.light-mode .price-divider {
    color: rgba(0, 0, 0, 0.2);
  }

  .price-amount {
    font-size: 3.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #e74c3c 0%, #ff6b6b 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
  }

  .price-amount.secondary {
    font-size: 3rem;
  }

  .price-label {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    margin-top: 0.5rem;
  }

  body.light-mode .price-label {
    color: #666666;
  }

  .price-condition {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    font-weight: 400;
    margin-top: 0.25rem;
  }

  body.light-mode .price-condition {
    color: #888888;
  }

  .sqft-note {
    text-align: center;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .sqft-note a {
    color: #e74c3c;
    text-decoration: none;
    font-weight: 500;
  }

  .sqft-note a:hover {
    text-decoration: underline;
  }

  body.light-mode .sqft-note {
    color: #666666;
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .price-note {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 500;
  }

  body.light-mode .price-note {
    color: #666666;
  }

  .features-list {
    list-style: none;
    margin-bottom: 2.5rem;
  }

  .features-list li {
    opacity: 0;
    animation: featureFadeIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .features-list li:nth-child(1) { animation-delay: 0.1s; }
  .features-list li:nth-child(2) { animation-delay: 0.2s; }
  .features-list li:nth-child(3) { animation-delay: 0.3s; }
  .features-list li:nth-child(4) { animation-delay: 0.4s; }
  .features-list li:nth-child(5) { animation-delay: 0.5s; }
  .features-list li:nth-child(6) { animation-delay: 0.6s; }
  .features-list li:nth-child(7) { animation-delay: 0.7s; }
  .features-list li:nth-child(8) { animation-delay: 0.8s; }
  .features-list li:nth-child(9) { animation-delay: 0.9s; }
  .features-list li:nth-child(10) { animation-delay: 1.0s; }
  .features-list li:nth-child(11) { animation-delay: 1.1s; }

  @keyframes featureFadeIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Feature Accordion Styles */
  .feature-accordion {
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .feature-accordion:last-child {
    border-bottom: none;
  }

  body.light-mode .feature-accordion {
    border-bottom-color: rgba(0, 0, 0, 0.06);
  }

  .feature-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    padding: 0.875rem 0;
    background: transparent;
    border: none;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.85);
    font-size: 1.05rem;
    text-align: left;
    transition: color 0.2s ease;
  }

  .feature-header:hover {
    color: rgba(255, 255, 255, 1);
  }

  body.light-mode .feature-header {
    color: #333333;
  }

  body.light-mode .feature-header:hover {
    color: #1a1a1a;
  }

  .feature-name {
    flex: 1;
  }

  .check-icon {
    width: 20px;
    height: 20px;
    color: #e74c3c;
    flex-shrink: 0;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-header:hover .check-icon {
    transform: scale(1.2) rotate(10deg);
  }

  .chevron-icon {
    width: 18px;
    height: 18px;
    color: rgba(255, 255, 255, 0.5);
    flex-shrink: 0;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  body.light-mode .chevron-icon {
    color: rgba(0, 0, 0, 0.4);
  }

  .feature-header[aria-expanded="true"] .chevron-icon {
    transform: rotate(180deg);
  }

  .feature-content {
    overflow: hidden;
    max-height: 0;
    transition: max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                padding 0.3s cubic-bezier(0.4, 0, 0.2, 1),
                opacity 0.3s ease;
    opacity: 0;
  }

  .feature-content:not([hidden]) {
    max-height: 200px;
    opacity: 1;
  }

  .value-proposition {
    padding: 0 0 1rem 2.25rem;
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.6);
  }

  body.light-mode .value-proposition {
    color: #666666;
  }

  .add-to-cart-btn {
    width: 100%;
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    color: white;
    border: none;
    padding: 1.25rem 2rem;
    border-radius: 16px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 6px 24px rgba(231, 76, 60, 0.3);
    position: relative;
    overflow: hidden;
  }

  .add-to-cart-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .add-to-cart-btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .add-to-cart-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 40px rgba(231, 76, 60, 0.5);
  }

  .add-to-cart-btn:active {
    transform: translateY(-1px) scale(0.98);
  }

  .volume-discount-note {
    text-align: center;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.6);
    margin-top: 1.25rem;
    font-style: italic;
  }

  body.light-mode .volume-discount-note {
    color: #666666;
  }

  /* Payment Options Styles */
  .payment-options {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .payment-options .add-to-cart-btn {
    text-align: center;
    text-decoration: none;
    display: block;
  }

  .payment-options .secondary-btn {
    background: linear-gradient(135deg, #64748b 0%, #475569 100%);
    box-shadow: 0 6px 24px rgba(100, 116, 139, 0.3);
  }

  .payment-options .secondary-btn:hover {
    box-shadow: 0 12px 40px rgba(100, 116, 139, 0.5);
  }

  .zelle-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  body.light-mode .zelle-option {
    background: rgba(0, 0, 0, 0.03);
    border-color: rgba(0, 0, 0, 0.1);
  }

  .zelle-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }

  body.light-mode .zelle-label {
    color: #666666;
  }

  .zelle-email {
    font-size: 1rem;
    font-weight: 600;
    color: #e74c3c;
    user-select: all;
  }

  .addon-zelle {
    margin-top: 1rem;
    padding: 0.75rem;
  }

  .addon-zelle .zelle-label {
    font-size: 0.85rem;
  }

  .addon-zelle .zelle-email {
    font-size: 0.9rem;
  }

  /* Add-On Services Styles */
  .addon-section {
    margin-top: 4rem;
  }

  .addon-header {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.95);
  }

  body.light-mode .addon-header {
    color: #1a1a1a;
  }

  .addon-subheader {
    text-align: center;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  body.light-mode .addon-subheader {
    color: #4a4a4a;
  }

  .addon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .pricing-card.addon {
    padding: 2.5rem;
  }

  .addon-badge {
    display: inline-block;
    background: rgba(100, 116, 139, 0.2);
    color: rgba(255, 255, 255, 0.8);
    padding: 0.4rem 1rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  body.light-mode .addon-badge {
    background: rgba(0, 0, 0, 0.08);
    color: #666666;
  }

  .pricing-card.addon h4 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.95);
  }

  body.light-mode .pricing-card.addon h4 {
    color: #1a1a1a;
  }

  .addon-price {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #e74c3c 0%, #ff6b6b 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 1.5rem;
  }

  .addon-description {
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    margin-bottom: 2rem;
    font-size: 0.95rem;
  }

  body.light-mode .addon-description {
    color: #4a4a4a;
  }

  .pricing-card.addon .add-to-cart-btn {
    padding: 1rem 1.5rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .pricing-cards-section {
      padding: 2rem 1.5rem 4rem;
    }

    .pricing-card {
      padding: 2rem;
    }

    .featured-plan-wrapper {
      margin-bottom: 4rem;
    }

    .card-header h2 {
      font-size: 1.75rem;
    }

    .price-amount {
      font-size: 2.5rem;
