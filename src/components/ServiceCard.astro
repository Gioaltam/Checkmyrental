---
const { title, text, img, tag, href = "#" } = Astro.props;
---

<a class="service card" href={href}>
  <div class="badge">{tag}</div>
  <div class="img-wrapper">
    <img src={img} alt={title} loading="lazy" />
  </div>
  <div class="body">
    <h3>{title}</h3>
    <p>{text}</p>
  </div>
</a>

<style>
  .service {
    position: relative;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    height: 100%;
  }

  .service:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(231, 76, 60, 0.2);
  }

  .img-wrapper {
    position: relative;
    overflow: hidden;
    background: var(--bg-elev);
  }

  .service img {
    width: 100%;
    height: 260px;
    object-fit: cover;
    display: block;
    transition: transform 0.6s cubic-bezier(0.2, 0.6, 0.2, 1);
  }

  .service:hover img {
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 0.4rem 0.75rem;
    border-radius: 999px;
    background: linear-gradient(135deg, var(--brand-red-light), var(--brand-red));
    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    z-index: 2;
    box-shadow: var(--shadow-glow);
  }

  .body {
    padding: 24px;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  h3 {
    margin: 0 0 8px;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--white);
  }

  p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  @media (prefers-reduced-motion: reduce) {
    .service,
    .service img {
      transition: none;
    }
  }
</style>
