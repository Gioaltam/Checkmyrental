<script>
  // Stats Animation with staggered reveal
  function initStatsAnimation() {
    const stats = document.querySelectorAll('[data-stat]');
    if (!stats.length) return;

    // Reset stats for re-initialization (important for View Transitions)
    stats.forEach(stat => {
      stat.classList.remove('reveal');
    });

    // Respect reduced motion preference
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      stats.forEach(stat => {
        stat.classList.add('reveal');
      });
      return;
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const stat = entry.target as HTMLElement;
          const delay = parseInt(stat.dataset.delay || '0');
          setTimeout(() => {
            stat.classList.add('reveal');
          }, delay);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    });

    stats.forEach(stat => observer.observe(stat));
  }

  // Initialize on initial page load
  document.addEventListener('DOMContentLoaded', initStatsAnimation);

  // Re-initialize on Astro View Transitions (client-side navigation)
  document.addEventListener('astro:page-load', initStatsAnimation);
</script>

<style>
  .stats-section {
    padding: 5rem 3rem;
    background: linear-gradient(180deg, rgba(15, 15, 20, 0.95) 0%, rgba(20, 20, 28, 0.98) 100%);
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    position: relative;
    overflow: hidden;
  }

  .stats-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(231, 76, 60, 0.3), transparent);
  }

  body.light-mode .stats-section {
    background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
    border-color: rgba(0, 0, 0, 0.08);
  }

  body.light-mode .stats-section::before {
    background: linear-gradient(90deg, transparent, rgba(231, 76, 60, 0.4), transparent);
  }

  .stats-container {
    max-width: 1100px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .stat {
    text-align: center;
    opacity: 0;
    transform: translateY(40px) scale(0.95);
    transition: all 0.7s cubic-bezier(0.34, 1.56, 0.64, 1);
    padding: 2rem 1rem;
    border-radius: 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
  }

  .stat::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 16px;
    background: linear-gradient(135deg, rgba(231, 76, 60, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .stat:hover::before {
    opacity: 1;
  }

  .stat:hover {
    transform: translateY(-4px);
    border-color: rgba(231, 76, 60, 0.2);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  body.light-mode .stat {
    background: white;
    border-color: rgba(0, 0, 0, 0.06);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.04);
  }

  body.light-mode .stat:hover {
    border-color: rgba(231, 76, 60, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
  }

  .stat.reveal {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(231, 76, 60, 0.15) 0%, rgba(231, 76, 60, 0.05) 100%);
    color: #e74c3c;
    transition: all 0.3s ease;
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
  }

  .stat:hover .stat-icon {
    transform: scale(1.1);
    background: linear-gradient(135deg, rgba(231, 76, 60, 0.25) 0%, rgba(231, 76, 60, 0.1) 100%);
  }

  body.light-mode .stat-icon {
    background: linear-gradient(135deg, rgba(231, 76, 60, 0.12) 0%, rgba(231, 76, 60, 0.04) 100%);
  }

  .stat-number {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    font-weight: 700;
    background: linear-gradient(135deg, #ffffff 0%, #cbd5e1 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  body.light-mode .stat-number {
    background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  body.light-mode .stat-label {
    color: #64748b;
  }

  @media (max-width: 900px) {
    .stats-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .stats-section {
      padding: 4rem 1.5rem;
    }

    .stat {
      padding: 1.5rem 1rem;
    }

    .stat-icon {
      width: 40px;
      height: 40px;
      margin-bottom: 1rem;
    }

    .stat-icon svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 400px) {
    .stats-section {
      padding: 3rem 1rem;
    }

    .stats-container {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat {
      padding: 1.25rem 1rem;
    }
  }
</style>
