---
import { ViewTransitions } from "astro:transitions";
import AccessibilityHelpers from "../components/AccessibilityHelpers.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
}

const {
  title = "Property Documentation Services | Same-Day Reports | CheckMyRental",
  description = "Professional rental property inspections with photo‑rich same-day reports. Regular property inspections help you catch issues early and protect your investment.",
  ogImage = "/og-image.jpg", // Default Open Graph image
  ogType = "website"
} = Astro.props;

// Get current URL for canonical and og:url
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="view-transition" content="same-origin">

  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description}>
  <meta name="keywords" content="property inspection, rental inspection, property maintenance, HVAC inspection, move-in inspection, move-out inspection, Tampa Bay, St Petersburg, Clearwater, Florida">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={ogType}>
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={ogImageURL}>
  <meta property="og:site_name" content="CheckMyRental">
  <meta property="og:locale" content="en_US">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={ogImageURL}>

  <!-- Favicon and App Icons -->
  <link rel="icon" type="image/png" sizes="512x512" href="/logo-icon.png">
  <link rel="icon" type="image/png" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  <meta name="theme-color" content="#0a0a0f">

  <!-- Preconnect to external resources -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Preload critical fonts -->
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
  <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"></noscript>

  <link rel="stylesheet" href="/static/view-transitions.css">

  <!-- Analytics (Google Tag Manager) -->
  <script is:inline>
    // Google Tag Manager will be injected here
    if (typeof window.dataLayer !== 'undefined') {
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer',import.meta.env.PUBLIC_GTM_ID || '');
    }
  </script>

  <ViewTransitions />
</head>
<body>
  <AccessibilityHelpers />

  <!-- Logo Entrance Animation - Seamless Transition -->
  <div class="entrance-curtain" id="entrance-curtain">
    <!-- Subtle gradient backdrop -->
    <div class="entrance-backdrop"></div>

    <!-- Glow burst effect at the end -->
    <div class="entrance-glow-burst"></div>

    <!-- Centered logo that will morph to header -->
    <div class="entrance-logo-wrapper" id="entrance-logo-wrapper">
      <div class="entrance-logo">
        <!-- Logo House -->
        <div class="entrance-logo-house">
          <div class="entrance-logo-window">
            <span class="window-pane"></span>
            <span class="window-pane"></span>
            <span class="window-pane"></span>
            <span class="window-pane"></span>
          </div>
        </div>
        <!-- Checkmark -->
        <div class="entrance-logo-check">
          <span class="checkmark-icon">✓</span>
        </div>
      </div>

      <!-- Brand Text -->
      <div class="entrance-brand-text">
        <span class="brand-check">Check</span><span class="brand-my">My</span><span class="brand-rental">Rental</span>
      </div>
    </div>

    <!-- Tagline that fades in -->
    <p class="entrance-tagline">Professional Property Documentation</p>

    <!-- Reveal wipe effect -->
    <div class="entrance-wipe"></div>

    <!-- Skip Animation Button -->
    <button class="skip-animation-btn" onclick="window.skipEntranceAnimation()" aria-label="Skip intro animation">
      Skip <span class="skip-arrow">→</span>
    </button>
  </div>

  <!-- Executive Gradient Mesh Background -->
  <div class="executive-bg"></div>

  <slot />

  <script>
    // Initialize theme (default is dark mode, light mode is opt-in)
    function initTheme() {
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        document.body.classList.add('light-mode');
      }
    }

    // Function to handle page reveal
    function handlePageReveal() {
      // Apply theme on every page load
      initTheme();

      const entranceCurtain = document.getElementById('entrance-curtain');
      const isLandingPage = window.location.pathname === '/landing' || window.location.pathname === '/';

      // Check for reduced motion preference
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      // Reset entrance curtain classes
      if (entranceCurtain) {
        entranceCurtain.classList.remove('show-entrance', 'hide-entrance');

        if (isLandingPage && !prefersReducedMotion) {
          entranceCurtain.classList.add('show-entrance');
        } else {
          entranceCurtain.classList.add('hide-entrance');
        }
      }

      // Set delay: full animation for landing (2.4s for polished animation), instant for others or reduced motion
      const delay = (isLandingPage && !prefersReducedMotion) ? 2400 : 0;

      setTimeout(() => {
        const header = document.querySelector('.header');
        const main = document.querySelector('main');
        if (header) header.classList.add('revealed');
        // Slight stagger for main content
        setTimeout(() => {
          if (main) main.classList.add('revealed');
        }, 100);
      }, delay);

      // Remove entrance curtain after animation completes
      if (isLandingPage && entranceCurtain) {
        setTimeout(() => {
          entranceCurtain.classList.add('fade-complete');
        }, 3000);
      }
    }

    // Skip animation handler
    function skipAnimation() {
      const entranceCurtain = document.getElementById('entrance-curtain');
      if (entranceCurtain) {
        entranceCurtain.classList.add('fade-complete');
      }
      const header = document.querySelector('.header');
      const main = document.querySelector('main');
      if (header) header.classList.add('revealed');
      if (main) main.classList.add('revealed');
    }

    // Expose skip function globally
    window.skipEntranceAnimation = skipAnimation;

    // Initial page load
    document.addEventListener('DOMContentLoaded', function() {
      handlePageReveal();
    });

    // Handle Astro view transitions (client-side navigation)
    document.addEventListener('astro:page-load', function() {
      handlePageReveal();
    });

    // Listen for theme changes from other tabs
    window.addEventListener('storage', (e) => {
      if (e.key === 'theme') {
        if (e.newValue === 'light') {
          document.body.classList.add('light-mode');
        } else {
          document.body.classList.remove('light-mode');
        }
      }
    });
  </script>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
    overflow-x: hidden;
    overscroll-behavior-x: none;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    background: #0a0a0f;
    color: #f0f0f0;
    line-height: 1.6;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 100vh;
    overflow-x: hidden;
    overscroll-behavior-x: none;
    position: relative;
    opacity: 0;
    animation: bodyFadeIn 0.6s ease-out forwards;
  }

  @keyframes bodyFadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  /* ===== ENTRANCE ANIMATION - PRODUCTION READY ===== */

  .entrance-curtain {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0a0a0f;
    z-index: 9999;
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    pointer-events: all;
    will-change: opacity, transform;
  }

  .entrance-curtain.show-entrance {
    display: flex !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .entrance-curtain.fade-complete {
    display: none !important;
    pointer-events: none;
  }

  /* Backdrop with animated gradient */
  .entrance-backdrop {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, rgba(231, 76, 60, 0.1) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(100, 116, 139, 0.08) 0%, transparent 50%);
    opacity: 0;
    animation: backdropFade 1s cubic-bezier(0.16, 1, 0.3, 1) 0.1s forwards;
  }

  @keyframes backdropFade {
    0% { opacity: 0; transform: scale(1.1); }
    100% { opacity: 1; transform: scale(1); }
  }

  /* Subtle particles floating up */
  .entrance-curtain::before,
  .entrance-curtain::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(231, 76, 60, 0.4);
    border-radius: 50%;
    opacity: 0;
    animation: particleFloat 2s ease-out 0.5s forwards;
  }

  .entrance-curtain::before {
    left: 30%;
    bottom: 40%;
    animation-delay: 0.6s;
  }

  .entrance-curtain::after {
    left: 70%;
    bottom: 35%;
    animation-delay: 0.8s;
  }

  @keyframes particleFloat {
    0% {
      opacity: 0;
      transform: translateY(0) scale(0);
    }
    20% {
      opacity: 0.8;
      transform: translateY(-20px) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(-100px) scale(0.5);
    }
  }

  /* Glow burst - refined timing */
  .entrance-glow-burst {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: radial-gradient(circle,
      rgba(231, 76, 60, 0.3) 0%,
      rgba(231, 76, 60, 0.15) 30%,
      rgba(231, 76, 60, 0.05) 50%,
      transparent 70%);
    transform: translate(-50%, -50%);
    opacity: 0;
    z-index: 5;
    will-change: width, height, opacity;
    animation: glowBurst 1s cubic-bezier(0.16, 1, 0.3, 1) 1.6s forwards;
  }

  @keyframes glowBurst {
    0% {
      width: 0;
      height: 0;
      opacity: 0;
    }
    15% {
      opacity: 1;
    }
    100% {
      width: 250vmax;
      height: 250vmax;
      opacity: 0;
    }
  }

  /* Wipe reveal - smoother gradient */
  .entrance-wipe {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0;
    background: linear-gradient(to top,
      transparent 0%,
      rgba(10, 10, 15, 0.2) 30%,
      rgba(10, 10, 15, 0.6) 70%,
      #0a0a0f 100%);
    z-index: 4;
    will-change: height;
    animation: wipeReveal 0.5s cubic-bezier(0.4, 0, 0.2, 1) 2s forwards;
  }

  @keyframes wipeReveal {
    0% {
      height: 0;
    }
    100% {
      height: 100%;
    }
  }

  /* Logo wrapper - polished entrance and exit */
  .entrance-logo-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    z-index: 10;
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    will-change: transform, opacity, filter;
    animation:
      logoAppear 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards,
      logoHold 0.6s ease 1s forwards,
      logoZoomOut 0.6s cubic-bezier(0.55, 0, 1, 0.45) 1.7s forwards;
  }

  @keyframes logoAppear {
    0% {
      opacity: 0;
      transform: translateY(30px) scale(0.85);
      filter: blur(4px);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
      filter: blur(0);
    }
  }

  @keyframes logoHold {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-2px) scale(1.01);
    }
  }

  @keyframes logoZoomOut {
    0% {
      transform: scale(1) translateY(0);
      opacity: 1;
      filter: blur(0);
    }
    100% {
      transform: scale(1.3) translateY(-30px);
      opacity: 0;
      filter: blur(10px);
    }
  }

  .entrance-logo {
    position: relative;
    width: 80px;
    height: 80px;
    flex-shrink: 0;
  }

  .entrance-logo-house {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    position: absolute;
    top: 8px;
    left: 8px;
    transform: rotate(45deg) scale(0);
    box-shadow:
      0 10px 30px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    animation: houseReveal 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) 0.35s forwards;
  }

  @keyframes houseReveal {
    0% {
      transform: rotate(45deg) scale(0) translateY(10px);
      opacity: 0;
    }
    60% {
      transform: rotate(45deg) scale(1.1) translateY(-2px);
    }
    100% {
      transform: rotate(45deg) scale(1) translateY(0);
      opacity: 1;
    }
  }

  .entrance-logo-window {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 4px;
    width: 24px;
    height: 24px;
  }

  .window-pane {
    background: rgba(255, 255, 255, 0.95);
    display: block;
    border-radius: 2px;
    opacity: 0;
    transform: scale(0);
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
  }

  .window-pane:nth-child(1) { animation: paneReveal 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) 0.6s forwards; }
  .window-pane:nth-child(2) { animation: paneReveal 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) 0.7s forwards; }
  .window-pane:nth-child(3) { animation: paneReveal 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) 0.8s forwards; }
  .window-pane:nth-child(4) { animation: paneReveal 0.35s cubic-bezier(0.34, 1.56, 0.64, 1) 0.9s forwards; }

  @keyframes paneReveal {
    0% {
      transform: scale(0);
      opacity: 0;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .entrance-logo-check {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:
      0 4px 15px rgba(231, 76, 60, 0.5),
      0 0 20px rgba(231, 76, 60, 0.3);
    opacity: 0;
    transform: scale(0) rotate(-180deg);
    animation: checkReveal 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 1s forwards;
  }

  @keyframes checkReveal {
    0% {
      transform: scale(0) rotate(-180deg);
      opacity: 0;
    }
    60% {
      transform: scale(1.2) rotate(10deg);
      opacity: 1;
    }
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  .checkmark-icon {
    color: white;
    font-size: 16px;
    font-weight: 900;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  /* Brand Text - staggered letter reveal */
  .entrance-brand-text {
    font-size: 2.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    opacity: 0;
    animation: textReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.5s forwards;
  }

  @keyframes textReveal {
    0% {
      opacity: 0;
      transform: translateX(-15px);
      filter: blur(4px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
      filter: blur(0);
    }
  }

  .brand-check {
    color: #ffffff;
    display: inline-block;
    animation: brandWordReveal 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.5s both;
  }

  .brand-my {
    color: rgba(255, 255, 255, 0.6);
    display: inline-block;
    animation: brandWordReveal 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.6s both;
  }

  .brand-rental {
    color: #e74c3c;
    font-weight: 800;
    display: inline-block;
    animation: brandWordReveal 0.4s cubic-bezier(0.16, 1, 0.3, 1) 0.7s both;
  }

  @keyframes brandWordReveal {
    0% {
      opacity: 0;
      transform: translateY(10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Tagline - refined timing */
  .entrance-tagline {
    position: absolute;
    bottom: 35%;
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    opacity: 0;
    letter-spacing: 0.02em;
    animation:
      taglineReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) 1.1s forwards,
      taglineFade 0.3s ease-out 1.8s forwards;
  }

  @keyframes taglineReveal {
    0% {
      opacity: 0;
      transform: translateY(15px);
      filter: blur(4px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  @keyframes taglineFade {
    to {
      opacity: 0;
      transform: translateY(-10px);
    }
  }

  /* Curtain fade out - smooth cinematic reveal */
  .entrance-curtain.show-entrance {
    animation: curtainFadeOut 0.6s cubic-bezier(0.4, 0, 0.2, 1) 2.3s forwards;
  }

  @keyframes curtainFadeOut {
    0% {
      opacity: 1;
      transform: scale(1);
      filter: blur(0);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.01);
    }
    100% {
      opacity: 0;
      transform: scale(1.03);
      filter: blur(2px);
      visibility: hidden;
      pointer-events: none;
    }
  }

  /* Skip Animation Button */
  .skip-animation-btn {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 999px;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0;
    animation: skipFadeIn 0.4s ease-out 0.8s forwards;
    z-index: 10000;
    min-height: 48px;
    pointer-events: all;
  }

  .skip-animation-btn:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .skip-animation-btn:focus {
    outline: 2px solid #e74c3c;
    outline-offset: 2px;
  }

  .skip-arrow {
    display: inline-block;
    margin-left: 0.25rem;
    transition: transform 0.3s ease;
  }

  .skip-animation-btn:hover .skip-arrow {
    transform: translateX(4px);
  }

  @keyframes skipFadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  /* ===== Reduced Motion Support ===== */
  @media (prefers-reduced-motion: reduce) {
    .entrance-logo-wrapper,
    .entrance-logo-house,
    .window-pane,
    .entrance-logo-check,
    .entrance-brand-text,
    .entrance-tagline,
    .entrance-backdrop {
      animation: simpleReveal 0.3s ease-out forwards !important;
    }

    .entrance-glow-burst,
    .entrance-wipe {
      animation: none !important;
      display: none;
    }

    .entrance-curtain.show-entrance {
      animation: simpleFadeOut 0.3s ease-out 0.5s forwards !important;
    }

    @keyframes simpleReveal {
      0% { opacity: 0; }
      100% { opacity: 1; }
    }

    @keyframes simpleFadeOut {
      to { opacity: 0; visibility: hidden; }
    }
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    /* Lock horizontal scrolling on mobile - only allow vertical panning */
    html, body {
      touch-action: pan-y pinch-zoom;
    }

    /* Allow horizontal scroll ONLY on PDF preview carousel */
    .pdf-preview-grid {
      touch-action: pan-x pan-y pinch-zoom;
    }

    .entrance-logo-wrapper {
      flex-direction: column;
      gap: 1.5rem;
    }

    .entrance-brand-text {
      font-size: 1.8rem;
    }

    .entrance-tagline {
      font-size: 1rem;
      padding: 0 2rem;
      text-align: center;
    }

    .skip-animation-btn {
      bottom: 1.5rem;
      right: 1.5rem;
    }
  }

  /* Executive Background */
  .executive-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at 20% 20%, rgba(100, 116, 139, 0.04) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 80%, rgba(71, 85, 105, 0.03) 0%, transparent 50%);
    pointer-events: none;
    z-index: -1;
  }

  /* Header reveal */
  .header,
  main {
    opacity: 0;
    animation: contentFallback 0.1s linear 4.0s forwards;
  }

  .header.revealed {
    opacity: 1;
    animation: headerReveal 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

