  <script define:vars={{ token, availableDates }}>
    let selectedDate = null;
    let selectedTime = null;

    // Format date for display
    function formatDate(dateStr) {
      const date = new Date(dateStr + 'T12:00:00');
      return date.toLocaleDateString('en-US', {
        weekday: 'long',
        month: 'long',
        day: 'numeric',
        year: 'numeric'
      });
    }

    // Format time for display
    function formatTime(timeStr) {
      const [hour, minute] = timeStr.split(':').map(Number);
      const period = hour >= 12 ? 'PM' : 'AM';
      const displayHour = hour % 12 || 12;
      return `${displayHour}:${String(minute).padStart(2, '0')} ${period}`;
    }

    // Show a specific step
    function showStep(stepId) {
      document.querySelectorAll('.form-step').forEach(step => {
        step.classList.add('hidden');
      });
      document.getElementById(stepId).classList.remove('hidden');
    }

    // Handle date selection
    document.querySelectorAll('.date-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        selectedDate = btn.dataset.date;

        // Update UI
        document.querySelectorAll('.date-btn').forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');

        // Show loading
        showStep('step-time');
        document.getElementById('loading-times').classList.remove('hidden');
        document.getElementById('time-grid').innerHTML = '';
        document.getElementById('selected-date-display').textContent = formatDate(selectedDate);

        // Fetch available times
        try {
          const response = await fetch(`/api/bookings/available-slots?token=${token}&date=${selectedDate}`);
          const data = await response.json();

          document.getElementById('loading-times').classList.add('hidden');

          if (response.ok && data.slots) {
            const availableSlots = data.slots.filter(s => s.available);
            const timeGrid = document.getElementById('time-grid');

            if (availableSlots.length === 0) {
              timeGrid.innerHTML = '<p class="no-times">No available times for this date. Please select another date.</p>';
            } else {
              timeGrid.innerHTML = availableSlots.map(slot => `
                <button type="button" class="time-btn" data-time="${slot.startTime}">
                  ${formatTime(slot.startTime)}
                </button>
              `).join('');

              // Add click handlers
              document.querySelectorAll('.time-btn').forEach(timeBtn => {
                timeBtn.addEventListener('click', () => {
                  selectedTime = timeBtn.dataset.time;
                  document.querySelectorAll('.time-btn').forEach(b => b.classList.remove('selected'));
                  timeBtn.classList.add('selected');

                  // Show confirmation
                  document.getElementById('confirm-date').textContent = formatDate(selectedDate);
                  document.getElementById('confirm-time').textContent = formatTime(selectedTime);
                  showStep('step-confirm');
                });
              });
            }
          } else {
            document.getElementById('time-grid').innerHTML = `<p class="error-message">${data.error || 'Unable to load times'}</p>`;
          }
        } catch (error) {
          document.getElementById('loading-times').classList.add('hidden');
          document.getElementById('time-grid').innerHTML = '<p class="error-message">Unable to connect to server. Please try again.</p>';
        }
      });
    });

    // Back buttons
    document.getElementById('back-to-date')?.addEventListener('click', () => {
      showStep('step-date');
    });

    document.getElementById('back-to-time')?.addEventListener('click', () => {
      showStep('step-time');
    });

    // Confirm booking
    document.getElementById('confirm-booking-btn')?.addEventListener('click', async () => {
      const btn = document.getElementById('confirm-booking-btn');
      btn.disabled = true;
      btn.textContent = 'Confirming...';

      try {
        const response = await fetch('/api/bookings/confirm', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            token,
            date: selectedDate,
            time: selectedTime
          })
        });

        const data = await response.json();

        if (response.ok) {
          // Show success
          document.getElementById('success-date').textContent = formatDate(selectedDate);
          document.getElementById('success-time').textContent = formatTime(selectedTime);
          showStep('step-success');
        } else {
          alert(data.error || 'Unable to confirm booking. Please try again.');
          btn.disabled = false;
          btn.textContent = 'Confirm Booking';
        }
      } catch (error) {
        alert('Unable to connect to server. Please try again.');
        btn.disabled = false;
        btn.textContent = 'Confirm Booking';
      }
    });
  </script>

