<script is:inline define:vars={{ SQUARE_LINKS, ZELLE_EMAIL }}>
  // Pricing configuration
  const PRICES = {
    quarterly: { house: 100, apartment: 70 },
    moveInOut: 200,
    annual: 200
  };
  const TAX_RATE = 0.07;

  // Service labels
  const SERVICE_LABELS = {
    quarterly: { house: 'Quarterly - House', apartment: 'Quarterly - Apartment' },
    moveInOut: 'Move-In / Move-Out',
    annual: 'Annual Inspection'
  };

  // Calculate total
  function calculateTotal(serviceType, propertyType) {
    let subtotal;
    if (serviceType === 'quarterly') {
      subtotal = PRICES.quarterly[propertyType];
    } else {
      subtotal = PRICES[serviceType];
    }
    const tax = subtotal * TAX_RATE;
    const total = subtotal + tax;
    return { subtotal, tax, total };
  }

  // Get service label
  function getServiceLabel(serviceType, propertyType) {
    if (serviceType === 'quarterly') {
      return SERVICE_LABELS.quarterly[propertyType];
    }
    return SERVICE_LABELS[serviceType];
  }

  // Update summary display
  function updateSummary() {
    const serviceType = document.querySelector('input[name="service_type"]:checked')?.value || 'quarterly';
    const propertyType = document.querySelector('input[name="property_type"]:checked')?.value || 'house';

    const { subtotal, tax, total } = calculateTotal(serviceType, propertyType);
    const label = getServiceLabel(serviceType, propertyType);

    document.getElementById('summary-service').textContent = label;
    document.getElementById('summary-price').textContent = `$${subtotal.toFixed(2)}`;
    document.getElementById('summary-subtotal').textContent = `$${subtotal.toFixed(2)}`;
    document.getElementById('summary-tax').textContent = `$${tax.toFixed(2)}`;
    document.getElementById('summary-total').textContent = `$${total.toFixed(2)}`;
    document.getElementById('card-amount').textContent = `$${total.toFixed(2)}`;

    // Show/hide property type section
    const propertySection = document.getElementById('property-type-section');
    if (serviceType === 'quarterly') {
      propertySection.classList.remove('hidden');
      // Update step numbers
      document.getElementById('contact-step').textContent = '3';
      document.getElementById('property-step').textContent = '4';
      document.getElementById('schedule-step').textContent = '5';
      document.getElementById('payment-step').textContent = '6';
    } else {
      propertySection.classList.add('hidden');
      // Update step numbers (skip step 2)
      document.getElementById('contact-step').textContent = '2';
      document.getElementById('property-step').textContent = '3';
      document.getElementById('schedule-step').textContent = '4';
      document.getElementById('payment-step').textContent = '5';
    }
  }

  // Get correct Square link
  function getSquareLink(serviceType, propertyType) {
    if (serviceType === 'quarterly') {
      return propertyType === 'house' ? SQUARE_LINKS.quarterlyHouse : SQUARE_LINKS.quarterlyApartment;
    } else if (serviceType === 'moveInOut') {
      return SQUARE_LINKS.moveInOut;
    } else {
      return SQUARE_LINKS.annual;
    }
  }

  // Validate form
  function validateForm() {
    const form = document.getElementById('checkout-form');
    const requiredFields = form.querySelectorAll('[required]');

    for (const field of requiredFields) {
      if (!field.value || (field.type === 'checkbox' && !field.checked)) {
        field.focus();
        field.classList.add('error');
        return false;
      }
      field.classList.remove('error');
    }
    return true;
  }

  // Set minimum date
  function setMinDate() {
    const dateInput = document.getElementById('preferred-date');
    if (dateInput) {
      const minDate = new Date();
      minDate.setDate(minDate.getDate() + 2);
      dateInput.min = minDate.toISOString().split('T')[0];
    }
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    // Set up event listeners for service type
    document.querySelectorAll('input[name="service_type"]').forEach(radio => {
      radio.addEventListener('change', updateSummary);
    });

    // Set up event listeners for property type
    document.querySelectorAll('input[name="property_type"]').forEach(radio => {
      radio.addEventListener('change', updateSummary);
    });

    // Pay with Card button
    document.getElementById('pay-card-btn').addEventListener('click', () => {
      if (!validateForm()) {
        alert('Please fill in all required fields before proceeding to payment.');
        return;
      }

      const serviceType = document.querySelector('input[name="service_type"]:checked').value;
      const propertyType = document.querySelector('input[name="property_type"]:checked')?.value || 'house';
      const squareLink = getSquareLink(serviceType, propertyType);

      // Save form data to localStorage for reference
      const formData = new FormData(document.getElementById('checkout-form'));
      localStorage.setItem('checkmyrental_checkout', JSON.stringify(Object.fromEntries(formData)));

      // Open Square payment link
      window.open(squareLink, '_blank');
    });

    // Pay with Zelle button
    document.getElementById('pay-zelle-btn').addEventListener('click', () => {
      if (!validateForm()) {
        alert('Please fill in all required fields.');
        return;
      }

      const zelleInstructions = document.getElementById('zelle-instructions');
      zelleInstructions.style.display = zelleInstructions.style.display === 'none' ? 'block' : 'none';
    });

    // Initial setup
    setMinDate();
    updateSummary();
  });
</script>
