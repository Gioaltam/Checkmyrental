---
import LandingLayout from '../layouts/LandingLayout.astro';
import Header from '../components/Header.astro';
import LandingFooter from '../components/LandingFooter.astro';

// Payment configuration - UPDATE THESE WITH YOUR ACTUAL SQUARE PAYMENT LINKS
const SQUARE_LINKS = {
  quarterlyHouse: "SQUARE_PAYMENT_LINK_HOUSE_107",      // $100 + 7% tax = $107
  quarterlyApartment: "SQUARE_PAYMENT_LINK_APT_74_90",  // $70 + 7% tax = $74.90
  moveInOut: "SQUARE_PAYMENT_LINK_MOVEINOUT_214",       // $200 + 7% tax = $214
  annual: "SQUARE_PAYMENT_LINK_ANNUAL_214"              // $200 + 7% tax = $214
};

const ZELLE_EMAIL = "giovannigomes11@gmail.com";
---

<LandingLayout
  title="Book Your Inspection | CheckMyRental"
  description="Book your professional property inspection - select service, enter details, and pay securely"
>
  <Header />

  <main id="main-content" class="checkout-main" tabindex="-1">
    <div class="checkout-container">
      <div class="checkout-header">
        <h1>Book Your Inspection</h1>
        <p>Select your service, enter property details, and choose your payment method</p>
      </div>

      <div class="checkout-content">
        <!-- Left: Form -->
        <div class="checkout-form-section">
          <form id="checkout-form" class="checkout-form">

            <!-- Step 1: Service Selection -->
            <div class="form-section">
              <h2><span class="step-number">1</span> Select Service</h2>
              <div class="service-options">
                <label class="service-option">
                  <input type="radio" name="service_type" value="quarterly" checked />
                  <div class="service-card">
                    <div class="service-header">
                      <span class="service-name">Quarterly Property Documentation</span>
                      <span class="service-badge popular">Most Popular</span>
                    </div>
                    <p class="service-desc">Complete property documentation every 3 months with detailed photo reports</p>
                    <div class="service-price-range">$70 - $100 <span class="price-note">depending on property type</span></div>
                  </div>
                </label>

                <label class="service-option">
                  <input type="radio" name="service_type" value="moveInOut" />
                  <div class="service-card">
                    <div class="service-header">
                      <span class="service-name">Move-In / Move-Out Inspection</span>
                      <span class="service-badge">One-Time</span>
                    </div>
                    <p class="service-desc">Comprehensive documentation at tenant transitions</p>
                    <div class="service-price-range">$200</div>
                  </div>
                </label>

                <label class="service-option">
                  <input type="radio" name="service_type" value="annual" />
                  <div class="service-card">
                    <div class="service-header">
                      <span class="service-name">Annual Inspection</span>
                      <span class="service-badge">One-Time</span>
                    </div>
                    <p class="service-desc">Thorough yearly property assessment for long-term maintenance planning</p>
                    <div class="service-price-range">$200</div>
                  </div>
                </label>
              </div>
            </div>

            <!-- Step 2: Property Type (shown only for Quarterly) -->
            <div class="form-section" id="property-type-section">
              <h2><span class="step-number">2</span> Property Type</h2>
              <div class="property-type-options">
                <label class="property-type-option">
                  <input type="radio" name="property_type" value="house" checked />
                  <div class="property-type-card">
                    <span class="property-icon">üè†</span>
                    <span class="property-label">House</span>
                    <span class="property-price">$100</span>
                    <span class="property-note">under 1,400 sq ft</span>
                  </div>
                </label>

                <label class="property-type-option">
                  <input type="radio" name="property_type" value="apartment" />
                  <div class="property-type-card">
                    <span class="property-icon">üè¢</span>
                    <span class="property-label">Apartment</span>
                    <span class="property-price">$70</span>
                    <span class="property-note">any size</span>
                  </div>
                </label>
              </div>
              <p class="larger-home-note">Larger home? <a href="mailto:info@checkmyrental.io">Contact us</a> for a custom quote.</p>
            </div>

            <!-- Step 3: Contact Information -->
            <div class="form-section">
              <h2><span class="step-number" id="contact-step">3</span> Contact Information</h2>
              <div class="form-grid">
                <div class="form-group">
                  <label for="full-name">Full Name <span class="required">*</span></label>
                  <input type="text" id="full-name" name="full_name" required />
                </div>

                <div class="form-group">
                  <label for="email">Email <span class="required">*</span></label>
                  <input type="email" id="email" name="email" required />
                </div>

                <div class="form-group">
                  <label for="phone">Phone Number <span class="required">*</span></label>
                  <input type="tel" id="phone" name="phone" required />
                </div>
              </div>
            </div>

            <!-- Step 4: Property Information -->
            <div class="form-section">
              <h2><span class="step-number" id="property-step">4</span> Property Details</h2>
              <div class="form-group">
                <label for="property-address">Property Address <span class="required">*</span></label>
                <input type="text" id="property-address" name="property_address" required />
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="city">City <span class="required">*</span></label>
                  <input type="text" id="city" name="city" required />
                </div>

                <div class="form-group">
                  <label for="state">State <span class="required">*</span></label>
                  <input type="text" id="state" name="state" value="FL" required />
                </div>

                <div class="form-group">
                  <label for="zip">ZIP Code <span class="required">*</span></label>
                  <input type="text" id="zip" name="zip" required />
                </div>
              </div>

              <div class="form-group">
                <label for="access-instructions">Property Access Instructions</label>
                <textarea id="access-instructions" name="access_instructions" rows="3" placeholder="Gate codes, key location, tenant contact info, etc."></textarea>
              </div>
            </div>

            <!-- Step 5: Scheduling -->
            <div class="form-section">
              <h2><span class="step-number" id="schedule-step">5</span> Preferred Date</h2>
              <div class="form-group">
                <label for="preferred-date">Select a date <span class="required">*</span></label>
                <input type="date" id="preferred-date" name="preferred_date" required />
                <small class="form-hint">We'll confirm availability within 24 hours. Minimum 48 hours notice required.</small>
              </div>

              <div class="form-group">
                <label for="notes">Additional Notes</label>
                <textarea id="notes" name="notes" rows="2" placeholder="Any special requests?"></textarea>
              </div>
            </div>

            <!-- Terms -->
            <div class="form-group checkbox-group">
              <label class="checkbox-label">
                <input type="checkbox" id="terms" name="terms" required />
                <span>I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a></span>
              </label>
            </div>
          </form>
        </div>

        <!-- Right: Order Summary & Payment -->
        <div class="order-summary-section">
          <div class="order-summary-card">
            <h3>Order Summary</h3>

            <div class="summary-line-item">
              <span id="summary-service">Quarterly - House</span>
              <span id="summary-price">$100.00</span>
            </div>

            <div class="summary-divider"></div>

            <div class="summary-row">
              <span>Subtotal</span>
              <span id="summary-subtotal">$100.00</span>
            </div>
            <div class="summary-row">
              <span>Tax (7%)</span>
              <span id="summary-tax">$7.00</span>
            </div>
            <div class="summary-row total">
              <span>Total</span>
              <span id="summary-total">$107.00</span>
            </div>
          </div>

          <!-- Payment Options -->
          <div class="payment-section">
            <h3><span class="step-number" id="payment-step">6</span> Choose Payment Method</h3>

            <button type="button" id="pay-card-btn" class="payment-btn card-btn">
              <span class="payment-icon">üí≥</span>
              <span class="payment-text">
                <span class="payment-label">Pay with Card</span>
                <span class="payment-sublabel">Secure checkout via Square</span>
              </span>
              <span class="payment-amount" id="card-amount">$107.00</span>
            </button>

            <div class="payment-divider">
              <span>or</span>
            </div>

            <button type="button" id="pay-zelle-btn" class="payment-btn zelle-btn">
              <span class="payment-icon">üè¶</span>
              <span class="payment-text">
                <span class="payment-label">Pay with Zelle</span>
                <span class="payment-sublabel">No fees - send directly</span>
              </span>
            </button>

            <div id="zelle-instructions" class="zelle-instructions" style="display: none;">
              <p><strong>Send payment to:</strong></p>
              <p class="zelle-email">{ZELLE_EMAIL}</p>
              <p class="zelle-note">Include your name and property address in the memo. We'll confirm receipt and schedule your inspection.</p>
            </div>
          </div>

          <div class="contact-help">
            <p>Questions? <a href="mailto:info@checkmyrental.io">info@checkmyrental.io</a></p>
            <p><a href="tel:8132520524">(813) 252-0524</a></p>
          </div>
        </div>
      </div>
    </div>
  </main>

  <LandingFooter />
</LandingLayout>

