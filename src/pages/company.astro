</BaseLayout>

<style>
  .hero {
    padding-top: 120px;
    padding-bottom: 80px;
  }

  .hero-description {
    max-width: 740px;
    color: var(--muted);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .section-title {
    text-align: center;
    margin-bottom: 16px;
  }

  .section-subtitle {
    text-align: center;
    color: var(--muted);
    max-width: 600px;
    margin: 0 auto 48px;
    font-size: 1.05rem;
  }

  .mission-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 48px;
    align-items: center;
  }

  .mission-content h2 {
    margin-bottom: 24px;
  }

  .mission-content p {
    color: var(--text);
    line-height: 1.8;
    margin-bottom: 20px;
    font-size: 1.05rem;
  }

  .stats-highlight {
    padding: 40px 32px;
  }

  .stat-item {
    padding: 24px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    text-align: center;
  }

  .stat-item:last-child {
    border-bottom: none;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--white), var(--brand-orange));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 8px;
  }

  .stat-label {
    color: var(--muted);
    font-weight: 500;
  }

  .values-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    margin-top: 48px;
  }

  .value-card {
    padding: 32px;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(255, 127, 17, 0.15);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .value-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--white);
  }

  .value-card p {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .team-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    margin-top: 48px;
  }

  .team-card {
    padding: 32px;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(255, 127, 17, 0.15);
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--brand-orange), var(--brand-navy));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--white);
    margin: 0 auto 16px;
  }

  .team-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 4px;
    color: var(--white);
  }

  .role {
    color: var(--brand-orange);
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 12px;
  }

  .bio {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
    font-size: 0.95rem;
  }

  .contact-card {
    padding: 64px 48px;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-card h2 {
    margin-bottom: 16px;
  }

  .contact-card > p {
    color: var(--muted);
    margin-bottom: 40px;
    font-size: 1.05rem;
  }

  .contact-methods {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    margin-top: 32px;
  }

  .contact-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .contact-icon {
    font-size: 2rem;
  }

  .contact-label {
    font-weight: 600;
    font-size: 0.85rem;
    color: var(--muted);
    margin-bottom: 4px;
  }

  .contact-item a {
    color: var(--brand-orange);
    font-weight: 600;
    transition: color 0.2s;
  }

  .contact-item a:hover {
    color: var(--white);
  }

  @media (max-width: 968px) {
    .mission-grid,
    .values-grid,
    .team-grid,
    .contact-methods {
      grid-template-columns: 1fr;
    }

    .contact-card {
      padding: 48px 32px;
    }
  }
</style>
