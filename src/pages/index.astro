---
import LandingLayout from '../layouts/LandingLayout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import StatsSection from '../components/StatsSection.astro';
import GallerySection from '../components/GallerySection.astro';
import ROISection from '../components/ROISection.astro';
import PDFReportPreview from '../components/PDFReportPreview.astro';
import ProcessSection from '../components/ProcessSection.astro';
import FAQSection from '../components/FAQSection.astro';
import LandingFooter from '../components/LandingFooter.astro';
import LocalBusinessSchema from '../components/LocalBusinessSchema.astro';
---

<LandingLayout>
  <LocalBusinessSchema />
  <Header />

  <main id="main-content" tabindex="-1">
    <!-- 1. Hero: Grab attention with value proposition -->
    <HeroSection />

    <!-- 2. Stats: Build credibility immediately with numbers -->
    <StatsSection />

    <!-- 3. Services: Show what's included while interest is high -->
    <GallerySection />

    <!-- 4. ROI: Show quarterly is cheaper than one emergency repair -->
    <ROISection />

    <!-- 5. PDF Report Preview: Show the actual product they'll receive -->
    <PDFReportPreview />

    <!-- 5. Process: Explain how it works -->
    <ProcessSection />

    <!-- 6. FAQ: Address common questions and remove objections -->
    <FAQSection />
  </main>

  <LandingFooter />
</LandingLayout>
