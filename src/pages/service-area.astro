<script>
  // Pinellas County ZIP codes
  const pinellasZipCodes = [
    // St. Petersburg
    33701, 33702, 33703, 33704, 33705, 33706, 33707, 33708, 33709, 33710,
    33711, 33712, 33713, 33714, 33715, 33716, 33729, 33730, 33731, 33732,
    33733, 33734, 33736, 33742, 33747,
    // Clearwater
    33755, 33756, 33757, 33758, 33759, 33760, 33761, 33762, 33763, 33764, 33765, 33767,
    // Largo
    33770, 33771, 33773, 33774, 33777, 33778, 33779,
    // Dunedin
    34697, 34698,
    // Palm Harbor
    34683, 34684, 34685,
    // Tarpon Springs
    34688, 34689,
    // Seminole
    33772, 33776,
    // Pinellas Park
    33780, 33781, 33782,
    // Safety Harbor
    34695,
    // Belleair
    33786,
    // Indian Rocks Beach
    33785
  ];

  function checkZipCode() {
    const input = document.getElementById('zip-input') as HTMLInputElement | null;
    const result = document.getElementById('zip-result') as HTMLElement | null;
    const checkBtn = document.getElementById('check-zip-btn') as HTMLButtonElement | null;
    const btnText = checkBtn?.querySelector('.btn-text') as HTMLElement | null;
    const btnLoader = checkBtn?.querySelector('.btn-loader') as HTMLElement | null;

    if (!input || !result || !checkBtn) return;

    const zipCode = parseInt(input.value.trim());

    // Show loading state
    if (btnText && btnLoader) {
      btnText.style.display = 'none';
      btnLoader.style.display = 'inline-block';
      checkBtn.disabled = true;
    }

    // Simulate API delay for better UX
    setTimeout(() => {
      if (!zipCode || input.value.length !== 5) {
        result.className = 'zip-result error';
        result.innerHTML = `
          <div class="result-icon">‚ö†Ô∏è</div>
          <div class="result-content">
            <h3>Invalid ZIP Code</h3>
            <p>Please enter a valid 5-digit ZIP code</p>
          </div>
        `;
      } else if (pinellasZipCodes.includes(zipCode)) {
        result.className = 'zip-result success';
        result.innerHTML = `
          <div class="result-icon">‚úÖ</div>
          <div class="result-content">
            <h3>Great News! We Serve Your Area</h3>
            <p>ZIP code ${zipCode} is within our Pinellas County service area.</p>
            <a href="/pricing" class="result-btn">View Pricing & Book Now</a>
          </div>
        `;
      } else {
        result.className = 'zip-result error';
        result.innerHTML = `
          <div class="result-icon">‚ùå</div>
          <div class="result-content">
            <h3>Outside Service Area</h3>
            <p>ZIP code ${zipCode} is currently outside our Pinellas County service area.</p>
            <p class="contact-prompt">Contact us at <a href="tel:8132520524">(813) 252-0524</a> to discuss coverage options.</p>
          </div>
        `;
      }

      result.style.display = 'flex';

      // Reset button state
      if (btnText && btnLoader && checkBtn) {
        btnText.style.display = 'inline';
        btnLoader.style.display = 'none';
        checkBtn.disabled = false;
      }
    }, 500);
  }

  function validateZipInput(value: string) {
    const feedback = document.getElementById('zip-feedback') as HTMLElement | null;
    if (!feedback) return;

    if (value.length === 0) {
      feedback.style.display = 'none';
      return;
    }

    if (value.length < 5) {
      feedback.className = 'zip-feedback warning';
      feedback.textContent = `Enter ${5 - value.length} more digit${5 - value.length > 1 ? 's' : ''}`;
      feedback.style.display = 'block';
    } else if (value.length === 5) {
      const zipCode = parseInt(value);
      if (pinellasZipCodes.includes(zipCode)) {
        feedback.className = 'zip-feedback success';
        feedback.textContent = '‚úì Valid ZIP code';
      } else {
        feedback.className = 'zip-feedback error';
        feedback.textContent = '‚úó Outside service area';
      }
      feedback.style.display = 'block';
    }
  }


  function initZipChecker() {
    const checkBtn = document.getElementById('check-zip-btn') as HTMLButtonElement | null;
    const zipInput = document.getElementById('zip-input') as HTMLInputElement | null;
    const clearBtn = document.getElementById('clear-zip-btn') as HTMLElement | null;
    const zipResult = document.getElementById('zip-result') as HTMLElement | null;

    if (!checkBtn || !zipInput) {
      console.error('ZIP checker elements not found');
      return;
    }

    // ZIP code checker
    checkBtn.addEventListener('click', checkZipCode);
    zipInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        checkZipCode();
      }
    });

    // Real-time validation and clear button visibility
    zipInput.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      // Only allow numbers
      target.value = target.value.replace(/[^0-9]/g, '');

      // Show/hide clear button
      if (clearBtn) {
        clearBtn.style.display = target.value.length > 0 ? 'flex' : 'none';
      }

      // Real-time validation feedback
      validateZipInput(target.value);

      // Hide previous result when typing
      if (zipResult && target.value.length < 5) {
        zipResult.style.display = 'none';
      }
    });

    // Clear button
    clearBtn?.addEventListener('click', () => {
      if (zipInput) {
        zipInput.value = '';
        zipInput.focus();
      }
      if (clearBtn) {
        clearBtn.style.display = 'none';
      }
      if (zipResult) {
        zipResult.style.display = 'none';
      }
      const feedback = document.getElementById('zip-feedback') as HTMLElement | null;
      if (feedback) {
        feedback.style.display = 'none';
      }
    });

    console.log('ZIP checker initialized successfully');
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initZipChecker);

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initZipChecker);
</script>

