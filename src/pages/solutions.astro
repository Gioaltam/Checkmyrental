---
import BaseLayout from "../layouts/BaseLayout.astro";
import Reveal from "../components/Reveal.astro";
import ServiceCard from "../components/ServiceCard.astro";
---

<BaseLayout
  title="Solutions - InspectionAgent"
  description="Explore our comprehensive suite of property inspection tools and services."
>
  <!-- Hero Section -->
  <section class="hero section">
    <div class="container">
      <Reveal>
        <p class="eyebrow">Solutions</p>
        <h1 class="h1" transition:name="hero-title">
          Tools built for <span style="color:var(--brand-orange)">modern teams</span>
        </h1>
        <p class="hero-description">
          From core APIs to advanced analytics, our platform provides everything you need to deliver exceptional property inspection experiences.
        </p>
      </Reveal>
    </div>
  </section>

  <!-- Core Products -->
  <section class="section" id="api">
    <div class="container">
      <Reveal>
        <h2 class="h2 section-title">Core Products</h2>
        <p class="section-subtitle">
          Industry-leading tools designed for reliability, performance, and scale.
        </p>
      </Reveal>
      <div class="products-grid">
        <Reveal delay={100}>
          <ServiceCard
            tag="API"
            title="Inspection API"
            text="RESTful API with comprehensive documentation. Handle thousands of requests per second with guaranteed 99.9% uptime."
            img="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=1200&q=80"
          />
        </Reveal>
        <Reveal delay={200}>
          <ServiceCard
            tag="Dashboard"
            title="Analytics Portal"
            text="Real-time insights into your inspection data. Customizable dashboards, exportable reports, and actionable metrics."
            img="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=1200&q=80"
          />
        </Reveal>
        <Reveal delay={300}>
          <ServiceCard
            tag="Mobile"
            title="Field App"
            text="Native iOS and Android apps for on-site inspections. Offline support, photo capture, and instant sync."
            img="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=1200&q=80"
          />
        </Reveal>
      </div>
    </div>
  </section>

  <!-- Add-ons -->
  <section class="section integrations-section" id="webhooks">
    <div class="container">
      <Reveal>
        <h2 class="h2 section-title">Integrations & Add-ons</h2>
        <p class="section-subtitle">
          Extend your workflow with powerful integrations and advanced features.
        </p>
      </Reveal>
      <div class="features-grid">
        <Reveal delay={100}>
          <div class="feature-card card">
            <div class="feature-icon">üîî</div>
            <h3>Webhooks</h3>
            <p>Real-time event notifications pushed to your endpoints. Configure custom triggers and responses.</p>
          </div>
        </Reveal>
        <Reveal delay={200}>
          <div class="feature-card card">
            <div class="feature-icon">üîê</div>
            <h3>SSO Integration</h3>
            <p>Enterprise-grade authentication with SAML and OAuth2 support. Seamless user management.</p>
          </div>
        </Reveal>
        <Reveal delay={300}>
          <div class="feature-card card">
            <div class="feature-icon">üìä</div>
            <h3>Custom Reports</h3>
            <p>Generate branded PDF reports with your logo and styling. Automated scheduling and delivery.</p>
          </div>
        </Reveal>
        <Reveal delay={400}>
          <div class="feature-card card">
            <div class="feature-icon">ü§ñ</div>
            <h3>AI Insights</h3>
            <p>Machine learning-powered defect detection and risk assessment. Improve accuracy and speed.</p>
          </div>
        </Reveal>
      </div>
    </div>
  </section>

  <!-- Pricing -->
  <section class="section pricing-section" id="pricing">
    <div class="container">
      <Reveal>
        <h2 class="h2 section-title">Transparent Pricing</h2>
        <p class="section-subtitle">
          Choose the plan that fits your needs. Scale up or down anytime.
        </p>
      </Reveal>
      <div class="pricing-grid">
        <Reveal delay={100}>
          <div class="pricing-card card">
            <div class="plan-name">Starter</div>
            <div class="plan-price">$49<span>/month</span></div>
            <ul class="plan-features">
              <li>Up to 100 inspections/month</li>
              <li>Core API access</li>
              <li>Email support</li>
              <li>Basic analytics</li>
            </ul>
            <a href="#" class="button-secondary full-width">Get started</a>
          </div>
        </Reveal>
        <Reveal delay={200}>
          <div class="pricing-card card featured">
            <div class="featured-badge">Most Popular</div>
            <div class="plan-name">Professional</div>
            <div class="plan-price">$149<span>/month</span></div>
            <ul class="plan-features">
              <li>Up to 500 inspections/month</li>
              <li>All API features</li>
              <li>Priority support</li>
              <li>Advanced analytics</li>
              <li>Webhooks included</li>
            </ul>
            <a href="#" class="button full-width">Get started</a>
          </div>
        </Reveal>
        <Reveal delay={300}>
          <div class="pricing-card card">
            <div class="plan-name">Enterprise</div>
            <div class="plan-price">Custom</div>
            <ul class="plan-features">
              <li>Unlimited inspections</li>
              <li>Dedicated support</li>
              <li>Custom integrations</li>
              <li>SLA guarantees</li>
              <li>On-premise options</li>
            </ul>
            <a href="/company#contact" class="button-secondary full-width">Contact sales</a>
          </div>
        </Reveal>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding-top: 120px;
    padding-bottom: 80px;
  }

  .hero-description {
    max-width: 740px;
    color: var(--muted);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .section-title {
    text-align: center;
    margin-bottom: 16px;
  }

  .section-subtitle {
    text-align: center;
    color: var(--muted);
    max-width: 600px;
    margin: 0 auto 48px;
    font-size: 1.05rem;
  }

  .products-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    margin-top: 48px;
  }

  .features-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    margin-top: 48px;
  }

  .feature-card {
    padding: 32px;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 60px rgba(255, 127, 17, 0.15);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .feature-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--white);
  }

  .feature-card p {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .pricing-grid {
    display: grid;
    gap: 24px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    margin-top: 48px;
  }

  .pricing-card {
    padding: 40px 32px;
    position: relative;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 24px 64px rgba(255, 127, 17, 0.2);
  }

  .pricing-card.featured {
    border-color: var(--brand-orange);
    border-width: 2px;
  }

  .featured-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--brand-orange);
    color: #0b0b0b;
    padding: 0.4rem 1rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .plan-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--white);
  }

  .plan-price {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 24px;
    background: linear-gradient(135deg, var(--white), var(--brand-orange));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .plan-price span {
    font-size: 1rem;
    font-weight: 500;
    color: var(--muted);
    -webkit-text-fill-color: var(--muted);
  }

  .plan-features {
    list-style: none;
    padding: 0;
    margin: 0 0 32px;
  }

  .plan-features li {
    padding: 12px 0;
    color: var(--text);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .full-width {
    width: 100%;
    justify-content: center;
  }

  @media (max-width: 968px) {
    .products-grid,
    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
