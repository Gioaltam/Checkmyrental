    </div>
  </main>

  <LandingFooter />
</LandingLayout>

<style>
  .legal-page {
    padding-top: 100px;
    min-height: 100vh;
    background: linear-gradient(135deg, rgba(10, 10, 15, 0.98) 0%, rgba(20, 20, 30, 0.98) 100%);
  }

  body.light-mode .legal-page {
    background: linear-gradient(135deg, #f8f9fc 0%, #ffffff 100%);
  }

  .legal-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem;
  }

  .legal-container h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
  }

  body.light-mode .legal-container h1 {
    color: #1a1a1a;
  }

  .last-updated {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    margin-bottom: 3rem;
  }

  body.light-mode .last-updated {
    color: rgba(0, 0, 0, 0.5);
  }

  .legal-section {
    margin-bottom: 3rem;
  }

  .legal-section h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.95);
  }

  body.light-mode .legal-section h2 {
    color: #1a1a1a;
  }

  .legal-section h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.5rem 0 1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  body.light-mode .legal-section h3 {
    color: #333;
  }

  .legal-section p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  body.light-mode .legal-section p {
    color: rgba(0, 0, 0, 0.7);
  }

  .legal-section ul {
    list-style: disc;
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  .legal-section li {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.8;
    margin-bottom: 0.5rem;
  }

  body.light-mode .legal-section li {
    color: rgba(0, 0, 0, 0.7);
  }

  .legal-section a {
    color: #e74c3c;
    text-decoration: none;
  }

  .legal-section a:hover {
    text-decoration: underline;
  }

  .contact-info {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    margin-top: 1rem;
  }

  body.light-mode .contact-info {
    background: rgba(0, 0, 0, 0.02);
    border-color: rgba(0, 0, 0, 0.1);
  }

  .contact-info p {
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .legal-container {
      padding: 2rem 1.5rem;
    }

    .legal-container h1 {
      font-size: 2rem;
    }

    .legal-section h2 {
      font-size: 1.5rem;
    }

    .legal-section ul {
      margin-left: 1.25rem;
    }
  }
</style>
