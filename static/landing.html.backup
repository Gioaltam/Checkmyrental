    <script>
        // Dark Mode Functions
        function initTheme() {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('theme-icon');
            if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.body.classList.add('dark-mode');
                if (themeIcon) themeIcon.textContent = '☀️';
            } else {
                if (themeIcon) themeIcon.textContent = '🌙';
            }
        }

        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            const isDark = document.body.classList.contains('dark-mode');
            const themeIcon = document.getElementById('theme-icon');
            if (themeIcon) {
                themeIcon.textContent = isDark ? '☀️' : '🌙';
            }
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
        }


        // Listen for theme changes from other tabs/windows
        window.addEventListener('storage', (e) => {
            if (e.key === 'theme') {
                const isDark = e.newValue === 'dark';
                const themeIcon = document.getElementById('theme-icon');
                if (isDark) {
                    document.body.classList.add('dark-mode');
                    if (themeIcon) themeIcon.textContent = '☀️';
                } else {
                    document.body.classList.remove('dark-mode');
                    if (themeIcon) themeIcon.textContent = '🌙';
                }
            }
        });

        // Initialize on page load
        initTheme();
    </script>

    <!-- Auto-generate Owner ID from name -->
    <script>
    function generateOwnerId(fullName) {
      const ownerIdField = document.querySelector('input[name="owner_id"]');
      if (!ownerIdField || ownerIdField.dataset.manual === 'true') return;
      
      const ownerId = fullName.toLowerCase()
        .replace(/[^a-z0-9\s-]/g, '')
        .replace(/\s+/g, '_')
        .replace(/-+/g, '-')
        .substring(0, 30);
      
      ownerIdField.value = ownerId;
    }
    
    // Mark Owner ID as manually edited
    document.addEventListener('DOMContentLoaded', function() {
      const ownerIdField = document.querySelector('input[name="owner_id"]');
      if (ownerIdField) {
        ownerIdField.addEventListener('input', function(e) {
          if (e.target.value !== '') {
            e.target.dataset.manual = 'true';
          } else {
            delete e.target.dataset.manual;
          }
        });
      }
    });
    </script>
    
    <!-- Portal client JS: register/login/link/list tokens -->
    <script>
    const API_BASE = "/api/portal";                 // same-origin; no CORS headaches
    const PORTAL_JWT_KEY = "portal_jwt";            // localStorage key
    // Use relative paths so it works when opening this file directly or via a server
    const DASHBOARD_URL = "http://localhost:3002";  // Next.js dashboard URL (port 3002)
    const GALLERY_URL   = "multi-property-gallery.html";
    
    // Toggle Login Widget
    function toggleLoginWidget(e) {
      e.preventDefault();
      e.stopPropagation();
      const widget = document.getElementById('portal-login-widget');
      widget.classList.toggle('active');
      
      if (widget.classList.contains('active')) {
        // Focus on email field when opening
        setTimeout(() => {
          const emailField = widget.querySelector('input[type="email"]');
          if (emailField) emailField.focus();
        }, 100);
        
        // Add click outside listener
        setTimeout(() => {
          document.addEventListener('click', handleClickOutside);
        }, 100);
      } else {
        document.removeEventListener('click', handleClickOutside);
      }
    }
    
    function closeLoginWidget() {
      const widget = document.getElementById('portal-login-widget');
      widget.classList.remove('active');
      document.removeEventListener('click', handleClickOutside);
      // Clear any error messages
      document.querySelectorAll('.widget-error, .widget-success').forEach(el => {
        el.textContent = '';
        el.classList.remove('active');
      });
    }
    
    function handleClickOutside(e) {
      const widget = document.getElementById('portal-login-widget');
      const portalButton = e.target.closest('.cta-button');
      
      if (!widget.contains(e.target) && !portalButton) {
        closeLoginWidget();
      }
    }
    
    function switchTab(tab) {
      // Update tab buttons
      document.querySelectorAll('.widget-tab').forEach(t => t.classList.remove('active'));
      event.target.classList.add('active');
      
      // Update form visibility
      document.querySelectorAll('.widget-form-container').forEach(f => f.classList.remove('active'));
      if (tab === 'login') {
        document.getElementById('widget-login-form').classList.add('active');
      } else {
        document.getElementById('widget-register-form').classList.add('active');
      }
      
      // Clear error messages
      document.querySelectorAll('.widget-error, .widget-success').forEach(el => {
        el.textContent = '';
        el.classList.remove('active');
      });
    }
    
    async function handleWidgetLogin(e) {
      e.preventDefault();
      const form = e.target;
      const errorEl = document.getElementById('widget-login-error');
      const successEl = document.getElementById('widget-login-success');
      
      errorEl.textContent = '';
      errorEl.classList.remove('active');
      successEl.textContent = '';
      successEl.classList.remove('active');
      
      try {
        const response = await fetch(`${API_BASE}/login`, {
          method: "POST",
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify({
            email: form.email.value.trim(),
            password: form.password.value
          })
        });
        
        let data;
        try {
          data = await response.json();
        } catch (e) {
          console.error('Failed to parse response as JSON:', e);
          throw new Error('Server error - please check if the backend is running');
        }
        if (!response.ok) throw new Error(data.detail || "Login failed");
        
        setJWT(data.access_token);
        successEl.textContent = 'Login successful! Redirecting...';
        successEl.classList.add('active');
        
        // Get user's tokens and redirect to dashboard
        setTimeout(async () => {
          const tokens = await fetchUserTokens();
          if (tokens && tokens.length > 0) {
            window.location.href = `${DASHBOARD_URL}?token=${encodeURIComponent(tokens[0])}`;
          } else {
            // If no tokens, refresh the page to show the link property form
            await refreshLinkedTokens();
            closeLoginWidget();
          }
        }, 1000);
      } catch (err) {
        errorEl.textContent = err.message;
        errorEl.classList.add('active');
      }
      return false;
    }
    
    async function handleWidgetRegister(e) {
      e.preventDefault();
      const form = e.target;
      const errorEl = document.getElementById('widget-register-error');
      const successEl = document.getElementById('widget-register-success');
      
      errorEl.textContent = '';
      errorEl.classList.remove('active');
      successEl.textContent = '';
      successEl.classList.remove('active');
      
      // Validate passwords match
      if (form.password.value !== form.confirm_password.value) {
        errorEl.textContent = 'Passwords do not match';
        errorEl.classList.add('active');
        return false;
      }
      
      // Validate Owner ID format
      const ownerId = form.owner_id.value.trim();
      if (!/^[a-zA-Z0-9_-]+$/.test(ownerId)) {
        errorEl.textContent = 'Owner ID can only contain letters, numbers, underscores, and hyphens';
        errorEl.classList.add('active');
        return false;
      }
      
      try {
        const response = await fetch(`${API_BASE}/register-owner`, {
          method: "POST",
          headers: {"Content-Type": "application/json"},
          body: JSON.stringify({
            email: form.email.value.trim(),
            password: form.password.value,
            full_name: form.full_name.value.trim(),
            owner_id: ownerId
          })
        });
        
        let data;
        try {
          data = await response.json();
        } catch (e) {
          // If JSON parsing fails, we likely got an HTML error page
          console.error('Failed to parse response as JSON:', e);
          throw new Error('Server error - please check if the backend is running');
        }
        if (!response.ok) throw new Error(data.detail || "Registration failed");
        
        // Show success message with dashboard URL
        successEl.innerHTML = `
          <strong>Success!</strong> Your owner dashboard has been created.<br>
          Your dashboard URL: <strong>/owner/${ownerId}</strong><br>
          Redirecting to login...
        `;
        successEl.classList.add('active');
        
        // Switch to login tab after delay
        setTimeout(() => {
          switchTab('login');
          form.reset();
          // Pre-fill email in login form
          const loginForm = document.querySelector('#widget-login-form form');
          if (loginForm && loginForm.email) {
            loginForm.email.value = form.email.value.trim();
          }
        }, 3000);
      } catch (err) {
        errorEl.textContent = err.message;
        errorEl.classList.add('active');
      }
      return false;
    }

    // --- helpers ---
    function setJWT(t){ localStorage.setItem(PORTAL_JWT_KEY, t); }
    function getJWT(){ return localStorage.getItem(PORTAL_JWT_KEY); }
    function clearJWT(){ localStorage.removeItem(PORTAL_JWT_KEY); }
    function show(el){ el.style.display=""; }
    function hide(el){ el.style.display="none"; }
    
    async function fetchUserTokens() {
      try {
        const r = await fetch(`${API_BASE}/my-tokens`, {
          headers: { "Authorization":"Bearer "+getJWT() }
        });
        const data = await r.json();
        if (!r.ok) return [];
        return data.tokens || [];
      } catch {
        return [];
      }
    }

    async function portalRegister(e){
      e.preventDefault();
      const f = e.target;
      document.getElementById("reg_err").textContent = "";
      try{
        const r = await fetch(`${API_BASE}/register`, {
          method:"POST",
          headers:{"Content-Type":"application/json"},
          body: JSON.stringify({
            email: f.email.value.trim(),
            password: f.password.value,
            full_name: f.full_name.value.trim()
          })
        });
        const data = await r.json();
        if(!r.ok) throw new Error(data.detail || "Registration failed");
        setJWT(data.access_token);
        await refreshLinkedTokens();
      }catch(err){
        document.getElementById("reg_err").textContent = err.message;
      }
      return false;
    }

    async function portalLogin(e){
      e.preventDefault();
      const f = e.target;
      document.getElementById("log_err").textContent = "";
      try{
        const r = await fetch(`${API_BASE}/login`, {
          method:"POST",
          headers:{"Content-Type":"application/json"},
          body: JSON.stringify({
            email: f.email.value.trim(),
            password: f.password.value
          })
        });
        const data = await r.json();
        if(!r.ok) throw new Error(data.detail || "Login failed");
        setJWT(data.access_token);
        // After successful login, check if user has linked properties
        await refreshLinkedTokens();
        // If user has properties, redirect to dashboard with first property token
        setTimeout(async () => {
          const tokens = await fetchUserTokens();
          if (tokens && tokens.length > 0) {
            window.location.href = `${DASHBOARD_URL}?token=${encodeURIComponent(tokens[0])}`;
          }
        }, 500);
      }catch(err){
        document.getElementById("log_err").textContent = err.message;
      }
      return false;
    }

    async function portalLinkCode(e){
      e.preventDefault();
      const f = e.target;
      document.getElementById("link_msg").textContent = "";
      document.getElementById("link_err").textContent = "";
      try{
        const r = await fetch(`${API_BASE}/link-code`, {
          method:"POST",
          headers:{
            "Content-Type":"application/json",
            "Authorization":"Bearer " + getJWT()
          },
          body: JSON.stringify({ code: f.code.value.trim().toUpperCase() })
        });
        const data = await r.json();
        if(!r.ok) throw new Error(data.detail || "Linking failed");
        document.getElementById("link_msg").textContent = "Linked successfully.";
        f.reset();
        await refreshLinkedTokens();
      }catch(err){
        document.getElementById("link_err").textContent = err.message;
      }
      return false;
    }

    async function refreshLinkedTokens(){
      const linkForm = document.getElementById("portal-link");
      const tokensBox = document.getElementById("portal-tokens");
      if(!getJWT()){
        hide(linkForm); hide(tokensBox);
        return;
      }
      try {
        const r = await fetch(`${API_BASE}/my-tokens`, {
          headers: { "Authorization":"Bearer "+getJWT() }
        });
        const data = await r.json();
        if(!r.ok){
          // token likely expired or invalid
          clearJWT();
          hide(linkForm); hide(tokensBox);
          return;
        }
        // Logged in → show linking UI + tokens
        show(linkForm); show(tokensBox);
        
        // Hide registration and login forms when logged in
        const regForm = document.getElementById("portal-register");
        const loginForm = document.getElementById("portal-login");
        if (regForm) hide(regForm);
        if (loginForm) hide(loginForm);
        
        tokensBox.innerHTML = (data.tokens && data.tokens.length)
          ? data.tokens.map(t => `
              <div class="portal-card">
                <div class="portal-card-id">Portal ID: ${t}</div>
                <div class="portal-card-actions">
                  <a href="${DASHBOARD_URL}?token=${encodeURIComponent(t)}" class="portal-card-link">Open Dashboard</a>
                  <a href="${GALLERY_URL}?token=${encodeURIComponent(t)}" class="portal-card-link">Open Gallery</a>
                </div>
              </div>
            `).join("")
          : `<p class="portal-no-properties">No properties linked yet. Enter your Portal ID above to link a property.</p>`;
        
        // Add logout button if not present
        if (!document.getElementById('logout-btn')) {
          const logoutBtn = document.createElement('button');
          logoutBtn.id = 'logout-btn';
          logoutBtn.className = 'portal-logout-btn';
          logoutBtn.textContent = 'Sign Out';
          logoutBtn.onclick = () => {
            clearJWT();
            location.reload();
          };
          tokensBox.appendChild(logoutBtn);
        }
      } catch(err) {
        console.error('Error fetching tokens:', err);
        hide(linkForm); hide(tokensBox);
      }
    }

    // boot: if user already logged in, populate their tokens
    document.addEventListener("DOMContentLoaded", refreshLinkedTokens);
    </script>

